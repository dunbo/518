<link type="text/css" rel="stylesheet" href="/Public/css/public.css" />
<link type="text/css" rel="stylesheet" href="/Public/css/recommend.css" />
<script type="text/javascript" src='/Public/js/jquery.js'></script>
<style>
.sub_tr {height: 35px;text-align: left;}
</style>
<FORM method="POST" action="__URL__/sign_mend_edit?">
<table class="sub_tab" align="center" cellspacing="0" cellpadding="0" border="0">
	<input type="hidden" name="id" value="{$id}" />
	<input type="hidden" name="mid" value="{$mid}" />
	<input type="hidden" name="operation" value="{$operation}" />
	
	<if condition=" $operation eq 'pri' ">
		<tr class="sub_tr">
			<td>金币价格：
				<input type="text" name="price" value="{$rows.price}" />
			</td>
		</tr>
		<tr class="sub_tr">
			<td>购买次数：
				<input type="text" name="buy_num" value="{$rows.buy_num}" /><span style="color:#d6d6d6">&nbsp;上线10次</span>
			</td>
		</tr>
	<elseif condition=" $operation eq 'tsk' " />
		<tr class="sub_tr">
			<td>
			任务次数：
			 <input type="text" name="task_num" value="{$rows.task_num}" /><span style="color:#d6d6d6">&nbsp;上线10次</span>
			</td>
		</tr>
	</if>

	<tr class="sub_tr">
		<td colspan="2"> 
			<input type='submit' value="&nbsp;&nbsp;提交&nbsp;&nbsp;"/>&nbsp;&nbsp;&nbsp;&nbsp;
			<input type="button" onclick="tb_remove()" value="&nbsp;&nbsp;取消&nbsp;&nbsp;">
		</td>
		<td></td>
		<td></td>
	</tr>
</table>
</FORM>	