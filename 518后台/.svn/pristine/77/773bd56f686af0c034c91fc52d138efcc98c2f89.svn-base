<script type="text/javascript">
    function add() {
        var label_name = $.trim($("#label_name").val());
        var link_url = $.trim($("#link_url").val());
        var rank = $.trim($("#rank").val());
        var img_file = $.trim($("#img_file").val());
        
        if (label_name == '') {
            alert("专题名称不能为空");
            return false;
        }
        if (link_url == '') {
            alert("链接地址不能为空");
            return false;
        }
        if (rank == '') {
            alert("排序不能为空");
            return false;
        }
        if (img_file == '') {
            alert("图片不能为空");
            return false;
        }
        
        return true;
    }
</script>

<div>
<form action="__URL__/add" method="post" enctype="multipart/form-data" onsubmit="return add();">
<table>
    <tr>
        <td>专题名称：</td>
        <td><input type="text" name="label_name" id="label_name" style="width:200px;" ></td>
    </tr>
    <tr>
        <td>链接地址：</td>
        <td><input type="text" name="link_url" id="link_url" style="width:200px;" ></td>
    </tr>
    <tr>
        <td>宣传图片：</td>
        <td><input type="file" name="img_file" id="img_file" style="width:200px;" ></td>
        <td><font color="red">尺寸：200*105</font></td>
    </tr>
    <tr>
        <td>排序：</td>
        <td><input type="text" name="rank" id="rank" style="width:200px;" ></td>
    </tr>
    <tr>
        <td><input type="submit" value="提交" class="search_btn"></td>
        <td><input type="button" value="取消" onclick="tb_remove();" class="search_btn"></td>
    </tr>
</table>
</form>
</div>
