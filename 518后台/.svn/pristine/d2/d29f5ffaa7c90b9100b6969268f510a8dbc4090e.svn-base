<include file="../../Public/header"  />
<link type="text/css" rel="stylesheet" href="/Public/css/tablelist.css" />
<script type="text/javascript" src='/Public/js/thickbox-compressed.js' ></script>
<link type="text/css" rel="stylesheet" href="/Public/css/thickbox.css" />
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>
<script type="text/javascript" src="/Public/js/zhiyoo/common.js"></script>
<style type="text/css">
#submid{height:31px;}
h2{margin:10px;}
</style>
<body style="overflow-x: hidden; overflow-y: auto; ">
<div style="float:left;">
<h2>当前位置：添加版块配置</h2>
</div>
<a href="__URL__/showList/" class="search_btn" style="display:inline-block;">返回上级</a>

<form method='post' action="__URL__/add/action/do">
<if condition="$id gt 0"><input type="hidden" name="id" value="{$res.id}"></if>
<table border="0" cellpadding="0" cellspacing="0" class="table_list">
    <tr>
      <td width="30%" height="25" align="right">标题：</td>
      <td height="25" align="left">
        <input type="text" name="title" id="title" value="{$res.title}">
      </td>
    </tr>
	<tr>
      <td align="right">说明：</td>
      <td height="25" align="left"> <input type="text" name="description" id="description" value="{$res.description}"></td>
    </tr>
    <tr>
      <td align="right">位置：</td>
      <td height="25" align="left"> <input type="text" name="position" id="position" value="{$res.position}"></td>
    </tr>
	<tr>
      <td align="right">版块：</td>
    <td >
        <input id="newfid" type="hidden" name="fid" value="<if condition="$res['fid']">{$res.fid}<else />0</if>">
        <span id="forumlist" style="margin-right: 20px;">{$fname}</span><a id="furl" href='__URL__/forum_list/<if condition="$res['fid']">fid/{$res.fid}/</if>' class="thickbox" style="text-decoration: underline;color: red;">选择版块
	</td>
    </tr>
	<tr>
      <td colspan="2" align="center"><input type="submit" name="submit" onclick="return subcheck()" class="search_btn" style="display:inline-block;" id="submit" value="提交" /></td>
    </tr>
</table>
</form>

<script>
function subcheck(){
    var title = $("#title").val();
    var description = $("#description").val();
    var position = $("#position").val();
    var newfid = $("#newfid").val();
    
    if(title == '' || description == '' ){
        alert("请填写完整配置信息后在提交");
        return false;
    }
    if(position <= 0||position>10){
        alert('显示位置只能填写1-10');
        return false;
    }
    if(newfid == 0){
        alert("请选择正确的板块");
         return false;
    }
    return true;
    

}
</script>