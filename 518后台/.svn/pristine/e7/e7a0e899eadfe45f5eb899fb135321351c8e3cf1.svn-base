	function reject_tb_show(id,passed){
		if(passed == 5){
			var href = '__URL__/explicit_handle/id/'+id+'/typeid/'+passed+'/pkg/{$explicit_data.package}/cont/1';
			tb_show('',href,'thickbox');
		}
		if(passed == 2){
			var href = '__URL__/explicit_handle?id='+id+'&typeid='+passed+'/cont/1';
			tb_show('',href,'thickbox');
		}	
	}


	function reject(){
		id=arguments[0]?arguments[0]:0;
		passed=arguments[1]?arguments[1]:0;
		if(passed==3){
			tb_show('取消','__URL__/explicit_handle?passed='+passed+'&id='+id+'&bs=1&url_source=1&height=300&width=400',false);
		}else if(passed==5){
			//通过并同步操作
			var show_style = $("input[name='show_style']:checked").val();
			var package_643 = '{$explicit_data.package}';
		    var url = '__APP__/Sj/Derivesoft/package_check/content_type/9/package_643/'+package_643+'/show_style/'+show_style;
			$.ajax({
				url: url,
				type: 'get',
		        async: false,
				dataType: 'json',
				success: function(data){
					if(data.code == 2){
						if(!confirm('资源库已有该软件内容，更新后将替换原内容，原内容关联的所有运营位均将替换为新内容，确定通过审核并更新资源库吗？')){
				            return false;
				        }
				        window.location.href='__URL__/explicit_handle?id='+id+'&passed='+passed+'&url_source=1&1/1';
					}else if(data.code == 0){				
						if(!confirm('确定更新通过审核并更新资源库吗？')){
				            return false;
				        }
				        window.location.href='__URL__/explicit_handle?id='+id+'&passed='+passed+'&url_source=1&1/1';
					}
				}
			});
		}else{
			if(!confirm('是否确认通过审核？')){
	            return false;
	        }
			window.location.href='__URL__/explicit_handle?id='+id+'&passed='+passed+'&url_source=1&1/1';
		}
	}
