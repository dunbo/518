<include file="../../Public/header"  />
<link type="text/css" rel="stylesheet" href="/Public/css/tablelist.css" />
<script type="text/javascript" src='/Public/js/thickbox-compressed.js' ></script>
<link type="text/css" rel="stylesheet" href="/Public/css/thickbox.css" />
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>
<script type="text/javascript">
function ok(data)
  {
   if(confirm(data))
    return true;
   else return false
  }
  
</script>
<style type="text/css">
.tbspan{font-size:15px;margin:20px 6px;font-weight: bold;height:30px;background: #cdd;}
.radiotype{margin:3px;}
.table_list img{max-width:200px}
</style>
<body>
<form action="__URL__/editrank/type/{$ltype}" method="post">
<div style="margin:10px;">
		
<h2>众测轮播图配置</h2>
	
		<div style="float:right;">
		<if condition="!$editrank"><a href="__URL__/active_list_wrap/edit_rank/1"  class="search_btn" style="display:inline-block;margin-right:40px">编辑优先级</a></if>
		<if condition="$showadd"><a href="__URL__/add/type/{$ltype}"  class="search_btn" style="display:inline-block;width:135px;">添加</a></if>
		
		<if condition="$editrank"><input type="submit"  class="search_btn" style="display:inline-block;width:135px;margin-right:40px" value="保存优先级"><a href="__URL__/active_list_wrap/"  class="search_btn" style="display:inline-block;width:135px;">取消优先级</a></if>
		</div>
</div>
<table border="0" cellpadding="0" cellspacing="0" class="table_list">
	<thead>
		<tr>
			<th style="width: 50px; "><a href="__URL__/active_list_wrap/rank/{$order_url}">优先级↑↓</a></th>
			<th style="width: 120px;">宣传图片</th>
			<th style="width: 120px;">宣传文案</th>
			<th style="width: 80px;">链接</th>
			<th style="width: 80px;">操作</th>
			<th style="width: 80px;">展示状态</th>
		</tr>
	</thead>
	
	<volist name='actlist' id='list'>
	<tr>
	<td>
	<if condition="$editrank"><input type="text" value="{$list.rank}" name="order[{$list.id}]"><else />{$list.rank}</if>
	</td>
	<td>
	<if condition="$list['pic_path']"><img src="{$Think.const.IMGATT_HOST}/{$list.pic_path}"></if>
	</td>
	<td>
	{$list.subject}<br/>
	</td>
	<td>
	{$list.jumptxt}<br/>
	</td>
	<td>
	<a href="__URL__/edit/id/{$list.id}/type/{$ltype}" style="color:blue">编辑</a>
	<a href="__URL__/del_wrap/id/{$list.id}/" onclick="return ok('确定要删除数据吗？');" style="color:blue">| 删除</a>
	</td>
	<td>
	<a href="__URL__/changestatus_wrap/id/{$list.id}/status/{$list.status}" onclick="return ok('确定要更改状态吗？');" style="color:<if condition="$list.status eq 1">blue<else/>red</if>"><if condition="$list.status eq 1"> 启用 <else/> 停用</if></a>
	</td>
	</tr>
	</volist>
	
	
			

</table>
</form>
</body>
</html>
