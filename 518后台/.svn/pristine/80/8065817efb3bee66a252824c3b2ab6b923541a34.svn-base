{// 加载头部公共文件 }
<include file="../Public/header" />
<div class="main">
<div class="content">
<center>
<form id="upload" method='get'
	action="__URL__/incremental_update_whitelist">
<table width="100%" height="89" border="0" cellpadding="0"
	cellspacing="0" class="tb">
	<tr>
		<td colspan="7">软件列表-搜索软件：</td>
		<td><a href="/index.php/Sj/IncrementalUpdate/incremental_update_list">返回</a></td>
	</tr>
	<tr>
		<td>软件包名：</td>
		<td><input type="text" name="package_name" id="package_name"
			value="{$package_name}" /></td>
		<td><input type="submit" name="button" id="button" value="搜索" /></td>
	</tr>
</table>
</form>
<br />
<form id="upload" method='POST'
	action="__URL__/incremental_update_whitelist_process">
<table width="100%" height="89" border="0" cellpadding="0"
	cellspacing="0" class="tb">
	<tr>
		<td colspan="8">增加白名单列表：</td>
		
	</tr>
	<tr>
		<td>软件名称：</td>
		<td><input type="text" name="soft_name" id="soft_name" value="" /></td>
		<td>软件包名：</td>
		<td><input type="text" name="package_name" id="package_name"
			value="" /></td>
		<td>版本</td>
		<td><input type="text" name="version" id="version" value="" /></td>
		<td>版本号</td>
		<td><input type="text" name="version_code" id="version_code"
			value="" /></td>

	</tr>
	<tr>
		<td colspan="15" align="center"><input type="submit"
			name="button" id="button" value="加入白名单" /></td>
	</tr>
</table>
</form>
<br />

<table width="100%" border="0" cellpadding="0" cellspacing="0"
	class="tb">
	<tr>
		<th>ID</th>
		<th>软件名称</th>
		<th>软件包名</th>
		<th>版本</th>
		<th>版本号</th>
		<th>操作</th>
	</tr>
	<volist name="soft_list" id="softlist">
	<tr>
		<td>{$softlist.id}</td>
		<td>{$softlist.soft_name}</td>
		<td>{$softlist.package_name}</td>
		<td>{$softlist.version}</td>
		<td>{$softlist.version_code}</td>
		<td><a
			href="/index.php/Sj/IncrementalUpdate/incremental_update_delete/id/{$softlist.id}">删除</td>
	</tr>
	</volist>
</table>
{$page}</center>
</div>
</div>
<script><!--
function allow(u, id){
	var r=confirm("你确认执行此操作！");
	if (r==true){
		$.ajax({
			type: 'GET',
			url: u,
			dataType: 'json', 
			success:function(res){
				if(res.status == 1){
					var newid = '#' + id ;
					var aid = '#' + id + ' a';
					var iid = '#' + id + ' input';
					alert(iid);
					//alert(newid);
					$(newid + ' td').removeAttr('bgcolor');
					$(newid).css({ color: "#bcbcbc", background: "#ececec" });
					$(aid).css('color', '#bcbcbc');
					$(aid).removeAttr('href');
					$(aid).removeAttr('onclick');
					$(iid).attr({disabled:'disabled', name:'disabled'});
					$(iid).attr('checked', false);
				} else {
					alert(res.info);
				}
			}
		});		
	}
}
--></script>