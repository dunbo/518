<include file="../../Public/header"  />
<link type="text/css" rel="stylesheet" href="/Public/css/tablelist.css" />
<script type="text/javascript" src='/Public/js/thickbox-compressed.js' ></script>
<link type="text/css" rel="stylesheet" href="/Public/css/thickbox.css" />
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>
<script type="text/javascript">
function ok(data)
  {
   if(confirm(data))
    return true;
   else return false
  }
  
</script>
<style type="text/css">
.tbspan{font-size:15px;margin:20px 6px;font-weight: bold;height:30px;background: #cdd;}
.radiotype{margin:3px;}
.table_list img{max-width:200px;}
</style>
<body  style="overflow-x: hidden; overflow-y: auto; ">
<form action="" method="post">
<div style="margin-top:20px;margin-left:10px;">
	<a href="__URL__/active_list/version/3700" class="search_btn" style="display:inline-block;<if condition="$version != 3700">background:#fff;</if>">V3.7</a>
	<a href="__URL__/active_list/version/3800" class="search_btn" style="display:inline-block;<if condition="$version != 3800">background:#fff;</if>">V3.8</a>
</div>
<table border="0" cellpadding="0" cellspacing="0" class="table_list">
	<thead>
		<tr>
			<th style="width: 50px; ">广告类型</th>
			<th style="width: 80px;">说明</th>
			<th style="width: 80px;">操作</th>
			<th style="width: 80px;">展示状态</th>
		</tr>
	</thead>
	
	<volist name='result' id='list'>
	<tr>
		<td>{$list.typename}</td>
		<td>{$list.explain}</td>
		<td>
			<a href="__URL__/edit/id/{$list.id}/typeid/{$list.typeid}/version/{$version}" class="thickbox" style="color:blue">编辑</a>
		</td>
		<td>
			<a href="__URL__/changestatus/id/{$list.id}/typeid/{$list.typeid}/status/{$list.status}" onclick="return ok('确定要更改状态吗？');" style="color:<if condition="$list.status eq 1">blue<else/>red</if>"><if condition="$list.status eq 1"> 开启 <else/> 停用</if></a>
		</td>
	</tr>
	</volist>
</table>
</form>
</body>
</html>
