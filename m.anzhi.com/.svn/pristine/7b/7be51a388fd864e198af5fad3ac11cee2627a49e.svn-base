<script type="text/javascript">
	var sid = '<!--{$out.sid}-->';
	var aid = '<!--{$out.aid}-->';
	var share_promotion_host = '<!--{$out.SHARE_PROMOTION_HOST}-->';
	var share_m_host = '<!--{$out.SHARE_M_HOST}-->';
	
	function go_share() {
		var share_text = '风花雪月四季轮回，记录着青春，来安智市场参加“光阴的故事”写属于你自己的故事！';
		var share_url = share_promotion_host + "/images/timememory/share_weibo.jpg";
		var share_actionurl = share_m_host + "/a_" + aid + ".html";
		var share_urlweixin = share_promotion_host + "/images/timememory/share_weixin.png";
		
		var share_json = '{"TEXT":"' + share_text + '", "URL":"' + share_url + '","ACTIONURL":"' + share_actionurl + '","URLWEIXIN":"' + share_urlweixin + '"}';
		window.AnzhiActivitys.getShareDialog(share_json);
		$.ajax({
			url:'/lottery/timememory_share_num.php?sid='+sid,
			success:function() {
			}
		});
		setTimeout('setLotteryClickable()', 5000);
		
	}
	
	function setLotteryClickable() {
		if ($('#btn_lott').hasClass('gray')) {
			$('#btn_lott').removeClass('gray').attr('href', '/lottery/timememory_lottery.php?sid='+sid);
		}
	}
</script>

