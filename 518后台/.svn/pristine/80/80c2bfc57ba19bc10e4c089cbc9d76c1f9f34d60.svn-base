<script language="javascript">
function gbcount1(message,total,used,remain)
{
  var max1;
  max1 = total.value;
  if (message.value.length > max1) {
  message.value = message.value.substring(0,max1);
  used.value = max1;
  remain.value = 0;
 <!-- alert("留言不能超过 200 个字!");-->
 alert("不能超过"+total.value+"个字!");
  }
  else {
  used.value = message.value.length;
  remain.value = max1 - used.value;
  }
}
function showOrHide(index,obj)
{
	var status_img = $('#feedback_img'+index).css('display');
	$('#feedback_img'+index).toggle(function(){
		if(status_img == 'none')
		{
			obj.innerHTML = '收起附件';
		}
		else{
			obj.innerHTML = '展开附件';
		}
	});
}
//回复提交
function undercarriage_submit() {
	var  rt = '';
	var mark_type = false;
	var start_choose = true;
	var last;
	var error = 0;
	$('input:checkbox[name="reject[]"]').each(function(){
 		if($(this).attr('mark') == 0){
 			if($(this).attr('checked') != 'checked')	last = 1;
			else	last = 0;
		}
 		if($(this).attr('checked') == 'checked'){
		if(!mark_type){
			if( $(this).attr('mark') == 1){
				if(last == 1){
					error = 1;					
				}
				rt = rt.substring(0,rt.length-1);
				rt += '('+$.trim($(this).val());
				mark_type = true;
			}else{
				if(start_choose){
					rt +=  $(this).val()+'；';
					start_choose = false;
				}else{
					rt += '\n' + $(this).val()+'；';					
				}				
				mark_type = false;
			}			
		}else{
			if( $(this).attr('mark') == 1){
				if(last == 1){
					error = 1;					
				}
				rt += '，' + $.trim($(this).val());
				mark_type = true;
			}else{				
				rt += ')；\n'+ $(this).val() + '；';
				mark_type = false;
			}
		}
 	 }
	});
	if(mark_type){
		if(rt) rt += ')；\n' ;
	}else{
		if(rt) rt += '\n' ;
	}
	if(error == 1){
		alert('选择子类原因时，必须选择主原因');
		return false;
	}
	if($('#content').val()!='') {
		rt += $('#content').val() + '；';
	}
	if(!rt){
		alert('请选择或填写回复内容！');
		return false;
	}	
	$.ajax({
		url: "__URL__/reply_add",
		data: 'content='+rt+'&fid='+$('#fid').val(),
		type: 'post',
		dataType: 'json',
		success: function(ret) {
			if(ret['code']==0) {	//失败
				alert(ret['msg']);
				location.reload();//加载页面
				return false;
			} else if(ret['code']==1) {	//成功
				alert(ret['msg']);
				window.location.href='__URL__/feedback_suggestions/status/1/last_status/<?php echo $last_status; ?>';
			}
		}
	});
}	
</script>
