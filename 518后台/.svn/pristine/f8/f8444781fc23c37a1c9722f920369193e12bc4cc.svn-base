<include file="../../Public/header"  />
<link type="text/css" rel="stylesheet" href="/Public/css/tablelist.css" />
<script type="text/javascript" src='/Public/js/thickbox-compressed.js' ></script>
<link type="text/css" rel="stylesheet" href="/Public/css/thickbox.css" />
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>
<script type="text/javascript" src="/Public/js/zhiyoo/common.js"></script>
<style type="text/css">
#submid{height:31px;}

.table thead tr th{ text-align:center;}
.navgition { padding-bottom:20px; padding-right:30px; text-align:right;}
.navgition form {display:inline;}

#submid{height:31px;}
#prefectureId{float:left;margin-left:10px;}
#prefectureId a{float:left;margin-right:5px;}
#addAreaId{float:left;margin-right:5px;}
#noteId{margin-left:10px;color:red;}
.mOn{color:red;}
.clear{ clear:both; float:none;}

</style>
<body style="overflow-x: hidden; overflow-y: auto; ">
<form method='post' action="__URL__/edit_treat_area" onsubmit="return clickConfirm('确定保存优先级更改吗？');">
<input type="hidden" name="action" value="area_edit_b_plat" />
<div style="margin-top:10px;">
	<div id="prefectureId">
		<a class="search_btn" href="__URL__/all_area_essence">精华热贴</a> 
		<a class="search_btn mOn" href="__URL__/all_area_top">热门论坛</a>
		<a class="search_btn" href="__URL__/all_area_newhot">搜索-新热版块</a>
	</div>
	<div  style="float:right;margin-bottom:5px;">
	<a href="__URL__/add_area_top?action=add" class="thickbox search_btn" id="addAreaId">添加热门论坛</a> 
	<input class="search_btn" style="display:none;float:left;" type="submit" id="submid" value="保存优先级"> 
	<a class="search_btn" style="display:inline-block;" href="javascript:priority('P_id');" id="priorityid">编辑优先级</a>
	</div>
</div>
<div class="clear"></div>
<table border="0" cellpadding="0" cellspacing="0" class="table_list">
	<thead>
		<tr>
			<th width="70"><a href="__URL__/all_area_top?field=b_plat&order={$order}">优先级↓↑</a></th>
			<th >版块ID</th>
			<th >版块名称</th>
			<th >显示名称</th>
			<th >LOGO</th>
			<th ><a href="__URL__/all_area_top?ordernum={$order}">内容数量↓↑</a></th>
			<th width="90">操作</th>
			<th width="70"><a href="__URL__/all_area_top?field=status&order={$order}">使用状态↓↑</a></th>
		</tr>
	</thead>
	<volist name="areadata" id="val">
	<tr>
		<td id="P_id">
			<a>{$val.b_plat|default='0'}</a>
			<input type="text" name="level[{$val.id}]" onkeyup="this.value=replaceNum(this.value);" size="4" id="level" style="display:none;" value="{$val.b_plat|default='0'}" /> 
		</td>
		<td>{$val.b_fid}</td>
		<td>{$val.b_name}</td>
		<td>{$val.name}</td>
		<td>
			<if condition="$val.icon !=''">
			<img src="<?php echo IMGATT_HOST;?>{$val.icon}" width="50" onclick="showImg(this,'');" style="cursor:pointer;" />
			<else />无</if>
		</td>
		<td>{$val.area|default='0'}</td>
		<td>
			<a href="__URL__/add_area_top?id={$val.id}&action=edit" style="color:blue" class="thickbox">编辑</a>
			|<a href="__URL__/del_area?id={$val.id}&action=del" style="color:blue" onclick="return clickConfirm('确定要删除该版块数据吗？');">删除</a>
		</td>
		<td><if condition="$val.status eq 1"> <a href="__URL__/edit_treat_area?id={$val.id}&status=0&action=status" title="点击切换状态为停用" style="color:blue" onclick="return clickConfirm('确定要更改状态吗？');">使用</a>
		<elseif condition="$val.status eq 0"/><a href="__URL__/edit_treat_area?id={$val.id}&status=1&action=status" style="color:red" title="点击切换状态为使用" onclick="return clickConfirm('确定要更改状态吗？');">停用</a>
		</if></td>
	</tr>
	</volist>
</table>
</form>
<p id="noteId">注：最多设置9个热门版块。</p>
</body>
</html>