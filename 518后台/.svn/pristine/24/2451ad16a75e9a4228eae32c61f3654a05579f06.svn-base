<script type="text/javascript">
    function sub(){
        var type = $('#ad_type').val();
        var edit = $('#edit').val();
        $('#c_ad_type').val(type);
        if($('#ad_type').val()==''){
            alert('广告类型不能为空');
            return false;
        }
        if($('#content_type').val()==''){
            alert('广告数据类型不能为空');
            return false;
        }
        if(edit!=1){
            if($('#landscape_img').val()==''){
                alert('请上传闪屏横屏图片');
                return false;
            }
            if (!/\.(jpg)$/.test($('#landscape_img').val().toLowerCase())){
                alert('闪屏横屏图片格式错误');
                return false;
            }
            if($('#portrait_img').val()==''){
                alert('请上传闪屏竖屏图片');
                return false;
            }
            if (!/\.(jpg)$/.test($('#portrait_img').val().toLowerCase())){
                alert('闪屏竖屏图片格式错误');
                return false;
            }            
        }
        
        if(!$("input[name='close_flag']:checked").val()){
            alert('请选择关闭控制');
            return false;
        }
        if($('#pid').val()==''){
            alert("请输入平台");
            return false;
        }
        if($('#start_at').val()==''){
            alert("请输入开始时间");
            return false;
        }
        if($('#end_at').val()==''){
            alert("请输入结束时间");
            return false;
        }
        
        if($('#content_type').val()==1){
            if($('#url').val()==''){
                alert("请输入链接地址");
                return false;
            }
            if(!$("input[name='open_mode']:checked").val()){
                alert('请选择链接打开方式');
                return false;
            }
        }else{
            if($('#package').val()==''){
                alert("请输入包名");
                return false;
            }
            if(!$("input[name='download_flag']:checked").val()){
                alert('请选择下载方式');
                return false;
            }
			if(!$("input[name='show_intall_pic']:checked").val()){
                alert('请选择下载完成是否弹出安装界面');
                return false;
            }
        }
		return check_priority();
	}
</script>
