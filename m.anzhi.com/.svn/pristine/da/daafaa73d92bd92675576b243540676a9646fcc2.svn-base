	<div class="description part">
		<!--{$out.content}-->
	</div>
</div>

<!--{if $out.soft.COMMENT_COUNT > 0 && $out.perfect.comment_num > 0}-->
<div class="title_wrap">
	<div class="title">
		<div class="title_txt">评论(共<!--{$out.soft.COMMENT_COUNT}-->条)</div>
		<!--{if $out.soft.COMMENT_COUNT > $out.perfect.comment_num}--><span class="title_more"><a href="<!--{url2static_url}-->perfect.php?method=comment&id=<!--{$out.perfect.id}--><!--{/url2static_url}-->">更多</a></span><!--{/if}-->
		<div class="clear"></div>
	</div>
</div>
<div class="comment">
	<!--{foreach from=$out.comments item=v name=a}-->
	<div class="cmnt_list part">
		<div class="cmnt_top">
			<span class="cmnt_nick"><!--{$v.2}--></span>
			<i class="stars stars_<!--{$v.1}-->"></i>
			<span class="cmnt_ver"><!--{$v.5}--></span>
			<div class="clear"></div>
		</div>
		<div class="cmnt_txt"><!--{$v.4}--></div>
		<div class="cmnt_date"><!--{$v.3}--></div>
	</div>
	<!--{/foreach}-->
</div>
<!--{/if}-->

<!--{if $out.perfect.history_num > 0}-->
<div class="title_wrap">
	<div class="title">
		<div class="title_txt">往期精选</div>
		<!--{if $out.perfect_count > $out.perfect.history_num}--><span class="title_more"><a href="<!--{url2static_url}-->perfect.php?method=history<!--{/url2static_url}-->">更多</a></span><!--{/if}-->
		<div class="clear"></div>
	</div>
</div>
<div class="app">
	<ul class="app_list">
		<!--{foreach from=$out.history item=v name=a}-->
		<li class="part">
			<div class="app_icon"><img src="<!--{imgurltrans}--><!--{$v.5}--><!--{/imgurltrans}-->" alt="<!--{$v.4}-->" /></div>
			<div class="app_des">
				<h2><!--{$v.1}--></h2>
				<span><!--{$v.2|date_format:'%Y-%m-%d'}--></span>
			</div>
			<a href="<!--{url2static_url}-->perfect.php?id=<!--{$v.0}-->&market=<!--{$out.market}--><!--{/url2static_url}-->" class="clickarea"></a>
		</li>
		<!--{/foreach}-->
	</ul>
</div>
<!--{/if}-->

