<style type="text/css">
a{cursor:pointer;}
.linkc input{width:430px;}
</style>
<body>
<h2>编辑网站地图链接</h2>
<form method='post' action="__URL__/edit_link/id/{$id}/"  onsubmit="return checkform(this);">
<input type="hidden" name="id" value="{$id}" />
<div>
	<p>展示名称：<input type="text" name="name" id="name_id" value="{$link.name}" /></p>
	<p  class="linkc">跳转链接：<input type="text" name="link" id="link_id" value="{$link.link}" /></p>
	<p  class="linkc">优先级：<input type="text" onkeyup="if(isNaN(value))value=value.replace(/[^\d]/g,'');" name="rank" id="rank" value="{$link.rank|default=0}" /></p>
</div>
<div>

</div>
<div>
<input type="submit" class="search_btn" style="display:inline-block;" value="提交" /> 
<input type="button" class="search_btn" style="display:inline-block;" onclick="tb_remove();" value="取消" />
</div>
</form>
<script type="text/javascript">
function checkform(){
	var p_url=/^(https?):\/\/([A-z0-9]+[_\-]?[A-z0-9]+\.)*[A-z0-9]+\-?[A-z0-9]+\.[A-z]{2,}(\/.*)*\/?$/;
	if(!$.trim($('#name_id').val())){
		alert('展示名称不能为空');
		$('#name_id').focus();
		return false;
	}else if(!$.trim($('#link_id').val())){
		alert('跳转链接不能为空');
		$('#link_id').focus();
		return false;
	}else if(!p_url.test($('#link_id').val())){
		alert("链接地址有误");
		$('#link_id').focus();
		return false;
	}

	return true;
}
</script>
