<include file="../../Public/header"  />
<link type="text/css" rel="stylesheet" href="/Public/css/tablelist.css" />
<script type="text/javascript" src='/Public/js/thickbox-compressed.js' ></script>
<link type="text/css" rel="stylesheet" href="/Public/css/thickbox.css" />
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>
<script type="text/javascript" src="/Public/js/zhiyoo/common.js"></script>
<style type="text/css">
#submid{height:31px;}

.table thead tr th{ text-align:center;}
.navgition { padding-bottom:20px; padding-right:30px; text-align:right;}
.navgition form {display:inline;}
.clear{ clear:both; float:none;}
</style>
<body style="overflow-x: hidden; overflow-y: auto; ">
<form method='post' action="__URL__/content_rank/rid/{$rid}/">
<input type="hidden" name="action" value="area_edit" />
<div style="margin-top:10px;">
	<div style="float:right;margin-bottom:5px;">
	<input class="search_btn" style="display:none;" type="submit" id="submid" value="保存优先级">
	<a class="search_btn" style="display:inline-block;" href="javascript:priority('P_id');" id="priorityid">编辑优先级</a>
	<a href="__URL__/add_thread/rid/{$rid}/" class="thickbox search_btn" style="display:inline-block;">插入帖子</a>
	</div>
</div>
<div class="clear"></div>
<table border="0" cellpadding="0" cellspacing="0" class="table_list">
	<thead>
		<tr>
			<th width="70"><a href="__URL__/thread_list/rid/{$rid}?order={$order}">优先级↓↑</a></th>
			<th >TID</th>
			<th >标题</th>
			<th width="90">操作</th>
			<th width="70">状态</th>
		</tr>
	</thead>
	<volist name="result" id="val">
	<tr>
		<td id="P_id">
			<a>{$val.rank|default=''}</a>
			<input type="text" name="level[{$val.id}]" onkeyup="this.value=replaceNum(this.value);" size="4" id="level" style="display:none;" value="{$val.rank|default=''}" /> 
		</td>
		<td>{$val.tid|default=''}</td>
		<td><a href="http://bbs.zhiyoo.com/thread-{$val.tid|default=0}-1-1.html" target="_blank">{$val.subject|default=''}</a></td>
		<td>
			<a href="__URL__/deltid/id/{$val.id}/" onclick="return clickConfirm('确定要删除吗？');">删除</a>
		</td>
		<td><if condition="$val.status eq 1"> <a href="__URL__/statustid/id/{$val.id}/status/0/" title="点击切换状态为不更新" style="color:blue" onclick="return clickConfirm('确定要更改状态吗？');">更新</a>
		<elseif condition="$val.status eq 0"/><a href="__URL__/statustid/id/{$val.id}/status/1/" style="color:red" title="点击切换状态为更新" onclick="return clickConfirm('确定要更改状态吗？');">不更新</a>
		</if></td>
	</tr>
	</volist>
</table>
</form>
<div class="navgition">
	{$pageList|default='&nbsp;'}
</div>

</body>
</html>