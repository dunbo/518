/* CSS Document */
/*公共样式*/
body,header,section,footer,nav,div,span,img,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,input,textarea,select,option,fieldset,legend,p,th,td{margin:0; padding:0;}
body{max-width:640px;min-width:320px; margin:0 auto;font-size:16px; font-family:Microsoft Yahei,"微软雅黑"; background: url(../images/body_bg.jpg) repeat; color: #fff;}
ol,ul{list-style-type:none;}
h1,h2,h3,h4,h5,h6{ font-weight: normal;}
var,em{font-style:normal;}
a,img,fieldset{border:none;}
img{ display: block;}
a{text-decoration:none;color:#fff;}
.a,input,button,div{-webkit-tap-highlight-color:rgba(255,0,0,0);-moz-tap-highlight-color:rgba(255,0,0,0);-o-tap-highlight-color:rgba(255,0,0,0); outline: none;}
.clear{clear:both;overflow:hidden;}
.fl{ float: left;}
.fr{ float: right}
.cnt{text-align: center}
.underline{text-decoration:underline;}
.mtop{ margin-top: 35px;}
.mtop1{ margin-top: -20px;}
.mtop2{margin-top:-23px;}
.mbot{margin-bottom: 8px;}
.ptop{ padding-top: 10px;}
.ptop1{padding-top: 45px;}
.pbot{padding-bottom: 25px;}


.banner{position: relative; width: 100%;min-width: 320px; margin:0 auto; text-align: center;}
.banner img{ width: 100%;vertical-align: bottom;}

.main{margin:0 10px 10px;}

.share p{float:left; width:40%; padding:40px 10px 40px 20px; color:#fcff00}
.share a{position:absolute; right:10px; top:50%; margin-top:-15px; width:80px; height:30px; background-size:100% 100%; box-shadow:1px 1px 5px rgba(13,4,8,.4); text-align:center; line-height:30px;}

.wrap{  margin:10px 15px 0; position:relative;}
.wrap img{display:block; width:96%; margin:0 auto;}
.wrap i{position:absolute; left:25px; bottom:-40px; display:block; width:18px; height:77px; background:url(../images/decorate.png) no-repeat; background-size:cover; z-index:1}
.wrap span{position:absolute; right:25px; bottom:-40px; display:block; width:18px; height:77px; background:url(../images/decorate.png) no-repeat; background-size:cover; z-index:1}

.footer img{display:block; width:100%}


/*提示框*/
#body-bg{position:absolute;top:0px;left:0px;width: 100%; height: 100%; background-color: #000;-moz-opacity:0.5;-khtml-opacity: 0.5;opacity: 0.5;z-index: 99998;}
.tip-box{position:absolute;width: 90%;left:50%;top:50%; padding-bottom:35px; margin-left:-45%; background:#ffffff;  border-radius:4px; z-index: 99999; color:#545454}
.tip_hd{ height:30px; margin:0 15px; padding:10px 0 7px; border-bottom:1px solid #e6e6e6;}
.tip_hd h4{font-size:18px;}
.tip-mid{padding-bottom:4px;border-radius: 0px 0px 15px 15px;}
.share_tips li{float:left; width:33.3%; height:40px; margin:25px 0 0;}
.share_tips li a{display:block; width:32px; height:32px; margin:0 auto;}
.share_tips .jiathis_style_32x32 .jiathis_txt{float:none}
.share_tips .jiathis_style_32x32 .jtico{padding-left:0!important} 

.clo{ position: absolute;right: 20px;top: 10px;}
.clo a{ display: block; width:30px; height:30px;background:url("../images/tip_clo.png") 0 0 no-repeat;background-size:100% auto;text-indent: -9999px;}