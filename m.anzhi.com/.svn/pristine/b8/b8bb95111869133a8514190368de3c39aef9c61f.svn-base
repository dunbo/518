<script>
var sid = '<!--{$out.sid}-->',aid = 213;
function get_telphone(){
	var telphone = $('#telphone').val();
	if(!telphone || telphone == '请输入手机号'){
		window.scrollTo(0,0);
		$('#warning').css('display','');
		$('#warning').html('请输入手机号');
		return false;
	}else{
		$('#error').css('display','none');
	}
	
	$.ajax({
		url: '/lottery/mojianzr_telphone.php',
		data: 'telphone='+telphone+'&sid='+sid+'&aid='+aid,
		type: 'post',
		success: function(data){
			if(data == 500){
				window.scrollTo(0,0);
				$('#warning').css('display','');
				$('#warning').html('手机号格式错误');	
			}else{
				$('#warning').css('display','none');
				download_go();
			}
		}
	});
}

function download_go(){
	var json_data = window.AnzhiActivitys.getAllAppList(parseInt(aid));
	var cmd = 'var soft_lists=' + json_data;
	eval(cmd);
	var soft_list = soft_lists.DATA;
	for(i=0;i<soft_list.length;i++){
		window.AnzhiActivitys.downloadForActivity(parseInt(aid),parseInt(soft_list[i][0]),soft_list[i][7],soft_list[i][2],soft_list[i][13],soft_list[i][27],1);
	}
}
</script>
