<link type="text/css" rel="stylesheet" href="/Public/css/recommend.css" />
<link rel="stylesheet" type="text/css" media="all" href="/Public/js/calendar-win2k-cold-1.css" title="win2k-cold-1" />
<script type="text/javascript" src="/Public/js/calendar_bak.js"></script>
<script type="text/javascript" src="/Public/js/calendar-zh.js"></script>
<script type="text/javascript" src="/Public/js/calendar-setup.js"></script>
<script>
function checkPost()
{
	if ($('#spare_start_date').val() == '') {
		alert('请填写备用规则时间段:开始时间');
		return false;
	}
	if ($('#spare_end_date').val() == '') {
		alert('请填写备用规则时间段:结束时间');
		return false;
	}
	if ($('#from_start_date').val() == '') {
		alert('请填写数据来源时间段:开始时间');
		return false;
	}
	if ($('#from_end_date').val() == '') {
		alert('请填写数据来源时间段:结束时间');
		return false;
	}
	if (Date.parse($('#spare_start_date').val()) > Date.parse($('#spare_end_date').val()) ) {
		alert('备用规则时间段:开始时间不能大于结束时间');
		return false;
	}
	if (Date.parse($('#from_start_date').val()) > Date.parse($('#from_end_date').val()) ) {
		alert('数据来源时间段:开始时间不能大于结束时间');
		return false;
	}
	return true;
}
</script>
<style>
.sub_tr {
height: 35px;
text-align: left;
}
</style>
<div class="content">
<center>
 <form action="__URL__/edit_time" method="POST" enctype="multipart/form-data" onsubmit="return checkPost()">
    <table>
	<th>备用规则时间段</th>
	<tr><td>开始时间：</td><td><span
			id="WebCalendar3"
			style="border: 1px solid #7F9DB9; align: absmiddle; cursor: hand; display: inline-block; width: 124px; padding: 1px"><input id="spare_start_date" name="spare_start_date"
			style="cursor: hand; width: 100px; border: none 0px black;"
			value="{$spare_start_date}" size="15" type="text"><img
			src="__PUBLIC__/js/calendar.gif"
			onclick="return showCalendar('spare_start_date', 'y-mm-dd');"
			style="margin: 1px; cursor: hand;" width="16px" align="absmiddle"
			height="15px"></span>
			</td>
	</tr><tr><td>结束时间：</td><td><span 
			id="WebCalendar3"
			style="border: 1px solid rgb(127, 157, 185); padding: 1px; display: inline-block; width: 124px;">
			<input id="spare_end_date" name="spare_end_date"
			style="border: 0px none black; width: 100px;" value="{$spare_end_date}"
			size="15" type="text"><img src="__PUBLIC__/js/calendar.gif"
			onclick="return showCalendar('spare_end_date', 'y-mm-dd');"
			style="margin: 1px;" width="16px" align="absmiddle" height="15px">
		</span></td>
	</tr>
	<th>数据来源时间段</th>
	<tr><td>开始时间：</td><td><span
			id="WebCalendar3"
			style="border: 1px solid #7F9DB9; align: absmiddle; cursor: hand; display: inline-block; width: 124px; padding: 1px"><input id="from_start_date" name="from_start_date"
			style="cursor: hand; width: 100px; border: none 0px black;"
			value="{$from_start_date}" size="15" type="text"><img
			src="__PUBLIC__/js/calendar.gif"
			onclick="return showCalendar('from_start_date', 'y-mm-dd');"
			style="margin: 1px; cursor: hand;" width="16px" align="absmiddle"
			height="15px"></span>
			</td>
	</tr><tr><td>结束时间：</td><td><span 
			id="WebCalendar3"
			style="border: 1px solid rgb(127, 157, 185); padding: 1px; display: inline-block; width: 124px;">
			<input id="from_end_date" name="from_end_date"
			style="border: 0px none black; width: 100px;" value="{$from_end_date}"
			size="15" type="text"><img src="__PUBLIC__/js/calendar.gif"
			onclick="return showCalendar('from_end_date', 'y-mm-dd');"
			style="margin: 1px;" width="16px" align="absmiddle" height="15px">
		</span></td>
	</tr>
    <tr><td colspan="2" align="center"><input type="hidden" name="id" id="id" value="{$id}"><input id="loginBtn" type="submit" value="提交"/><input type="button" onclick="tb_remove()" value="&nbsp;&nbsp;取消&nbsp;&nbsp;"></td></tr>
	</table>
  </form>

</center>
</div>