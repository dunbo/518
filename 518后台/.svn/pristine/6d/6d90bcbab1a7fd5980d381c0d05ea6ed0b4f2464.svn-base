function set_radio(){
	$("input[type=radio]").each(function(i){
	 var text = $(this).val();
	 var date = $(this).attr("date");
	 var n = $(this).attr("name");
	 if(date){
		 console.log(n +':'+ date);
		 if(date =='on'){
			 $("."+n+"_on").show();
			 $("."+n+"_off").hide();
			 $(this).attr("checked",true);
