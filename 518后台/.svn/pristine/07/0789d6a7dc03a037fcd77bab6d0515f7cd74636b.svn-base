<include file="../Public/header" />

<form method="GET" action="__URL__/user_add">
<input type="hidden" name="coop_id" value="{$coop_id}" />
用户名：<input type="text" name="username" />
密码：<input type="text" name="password" />
<input type="submit" value="提交" />
</form>

<br>

<table>
<tr>
<td>用户名</td>
<td>密码</td>
<td>状态</td>
<td>操作</td>
<td>创建时间</td>
<td>修改时间</td>
</tr>
<volist name="user_list" id="user_list_vo">
<tr>
<td>{$user_list_vo.username}</td>
<td>{$user_list_vo.password}</td>
<td>
<if condition="$user_list_vo.status eq 0">
已停用
</if>
<if condition="$user_list_vo.status eq 1">
已启用
</if>
</td>
<td>
<if condition="$user_list_vo.status eq 0">
<a href="__URL__/user_modify_status/coop_id/{$coop_id}/username/{$user_list_vo.username}/status/1">启用</a>
</if>
<if condition="$user_list_vo.status eq 1">
<a href="__URL__/user_modify_status/coop_id/{$coop_id}/username/{$user_list_vo.username}/status/0">停用</a>
</if>
</td>
<td>{$user_list_vo.created_at}</td>
<td>{$user_list_vo.updated_at}</td>
</td>
</volist>
</table>

<br>

{$page}

