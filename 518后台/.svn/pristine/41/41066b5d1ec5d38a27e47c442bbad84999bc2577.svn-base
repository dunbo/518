<script type="text/javascript" src="/Public/school/js/jquery-1.6.2.min.js"></script>
<script type="text/javascript" src="/Public/school/js/jquery-ui-1.8.16.custom.min.js"></script>
<link rel="stylesheet" href="/Public/css/thickbox.css" type="text/css" media="screen" />
<script type="text/javascript" src='/Public/js/thickbox-compressed.js'></script>
<script type="text/javascript" src='/Public/js/jquery.js'></script>
<html>
<form action = "{:U('AdCustomer_p/editdo')}" method="post">
	部门名称:&emsp;<if condition="isset($co_info['charge_section'])">
	            <input type="radio" name="bumen" value="1" <eq name="co_info.charge_section" value="1">checked=checked</eq>>终端商务
				<input type="radio" name="bumen" value="2" <eq name="co_info.charge_section" value="2">checked=checked</eq>>商务
				<input type="radio" name="bumen" value="3" <eq name="co_info.charge_section" value="3">checked=checked</eq>>论坛
            <else />
	            <input type="radio" name="bumen" value="1">终端商务
				<input type="radio" name="bumen" value="2">商务
				<input type="radio" name="bumen" value="3">论坛
			</if>


	<br/><br/>
	小组名称:&emsp;<input type="text" id="update_content" name="xiaozu" value="{$co_info.group_name}" onKeyDown="gbcount(this.form.update_content);" onKeyUp="gbcount(this.form.update_content);">
	<br/>
	<input type="hidden" name="id" value="{$co_info.id}">
	<br/>
	<table>
	<tr>
	<td><input type="submit" value="提交" onclick="return f1();" class="search_btn"></td>
	<td><button type="button" onclick='tb_remove();' class="search_btn">取消</button></td>
	</tr>
	</table>
</form>
</html>
<script>
function gbcount(message)
{
	var max;
	max = 20;
	if (message.value.length > max) {
		message.value = message.value.substring(0,max);
		alert("小组名称不能多于20个字符");
		return false;
	}
}	
function f1(){
	var val=$('input:radio[name="bumen"]:checked').val();
	if(val==null){
		alert("请选择部门名称");
		return false;
	}
	var val=$('input:text[name="xiaozu"]').val();
	if(val==""){
		alert("请填写小组名称");
		return false;
	}
}
</script>