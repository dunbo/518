<include file="../Public/header" />
<center>      
     <form id="upload" enctype="multipart/form-data"  action="__URL__/updatePuLink" method="POST">
       <table>

        <tr><td></td><td>推广更新</td></tr>
        <tr>
            <td>推广名&nbsp;:</td>
            <td>
               <select name="puid" disabled>
               <option>--请选择推广名--</option>
               <volist name="pu_list" id="puvo">
                  <option value="{$puvo.id}" <if condition="$puvo.id eq $puid">selected</if>>{$puvo.pu_name}</option>
                </volist>
               </select>
            </td>
            <input type="hidden" name="pu_id" value="{$puid}">
        </tr>
        <tr>
            <td>上传APK:</td>
            <td><input type="file" id="" name="pkg_name"></td>
        </tr>
        <tr>
            <td>指定文件名</td>
            <td><input type="text" id="" name="alias" value="{$link.alias}" /></td>
        </tr>
        <tr>
        	<td colspan='2'>提示：版本、大小自动从上传软件中获取</td>
        </tr>
        <tr>
            <td><input type="hidden" name="url_suffix" value="{$url_suffix}"></td>
            <td><input type="submit" value="提交"/><input type="reset" value="重置"/></td>
        </tr>
       
       </table></form>
</center>