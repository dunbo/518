<include file="../../Public/header"  />
<link type="text/css" rel="stylesheet" href="/Public/css/tablelist.css" />
<script type="text/javascript" src='/Public/js/thickbox-compressed.js' ></script>
<link type="text/css" rel="stylesheet" href="/Public/css/thickbox.css" />
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>
<style type="text/css">
.tbspan{font-size:15px;margin:20px 6px;font-weight: bold;height:30px;background: #cdd;}
.radiotype{margin:3px;}
.table_list img{max-width:200px}
</style>
<body>
<div style="margin:10px;">
	<h2>产品分期管理</h2>
	<div style="float:right;">
		<a href="__URL__/adddateline/"  class="thickbox search_btn" style="display:inline-block;width:135px;">添加时间点</a>
	</div>
</div>
<table border="0" cellpadding="0" cellspacing="0" class="table_list">
	<thead>
		<tr>
			<th style="width: 50px; "><a href="__URL__/productPer/rank/{$rank|default='asc'}/">期数↑↓</a></th>
			<th style="width: 120px;">时间点</th>
			<th style="width: 80px;">产品数量</th>
			<th style="width: 80px;">查看编辑</th>
			<th style="width: 80px;">操作</th>
		</tr>
	</thead>
	
	<volist name='reslist' id='list'>
	<tr>
	<td>
	{$list.daily}
	</td>
	<td>
	<if condition="$list['id']">{$list.dateline|date="Y-m-d H:i:s",###}</if>
	</td>
	<td>
	{$list.count}<br/>
	</td>
	<td>
	<a href="__URL__/listfromdate/id/{$list.id|default=0}/" style="color:blue">查看编辑</a>
	</td>
	<td>
	<if condition="$list['id']">
	<a href="__URL__/editdateline/id/{$list.id}/" class="thickbox" style="color:blue">编辑</a>
	| <a href="__URL__/deldateline/id/{$list.id}/" onclick="return confirm('确定要删除该时间点吗？');" style="color:blue">删除</a>
	</if>
	</td>
	</tr>
	</volist>
	
	
			

</table>
</body>
</html>
