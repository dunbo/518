<include header="../Public/header"/>

<link rel="stylesheet" href="/Public/css/tablelist.css" type="text/css" media="screen" />

<body>
    <div class="nav_btns">
        <a href="__URL__/add_website?{$url_param}" class="blue search_btn" style="float:left;">添加采集站点</a>
		<div class="clear"></div>
    </div>
    <div>
        <table cellpadding="0" cellspacing="0" style="margin-top:10px;" class="table_list">
            <thead>
                <tr>
                    <th width="5%">ID</th>
                    <th width="15%">网站名称</th>
                    <th width="15%">优先级</th>
                    <th width="10%">添加时间</th>
                    <th width="10%">备注</th>
                    <th width="10%">状态</th>
                    <th width="20%">操作</th>
                </tr>
            </thead>
            <tbody>
                <volist name="list" id="list">
                <tr>
                    <td>{$list.id}</td>
                    <td>{$list.website_name}</td>
                    <td>{$list.priority}</td>
                    <td>{$list.create_time|date="Y-m-d H:i:s",###}</td>
                    <td>{$list.remark}</td>
                    <td><if condition="$list.status eq 1">启用<else/>停用</if></a></td>
                    <td>
                        <a href="__URL__/edit_website?id={$list.id}&{$url_param}">编辑</a>
                        <span>&nbsp;&nbsp;&nbsp;</span>|<span>&nbsp;&nbsp;&nbsp;</span>
                        <a href="__URL__/toggle_enabled_status?id={$list.id}&current_status={$list.status}" onClick="if(!confirm('确定进行此操作?'))return false;"><if condition="$list.status eq 1">停用<else/>启用</if></a>
                        <span>&nbsp;&nbsp;&nbsp;</span>|<span>&nbsp;&nbsp;&nbsp;</span>
                        <a href="__URL__/delete_website?id={$list.id}" onClick="if(!confirm('确定删除此记录吗?'))return false;">删除</a>
                    </td>
                </tr>
                </volist>
            </tbody>
        </table>
        <center>{$page}</center>
    </div>
</body>