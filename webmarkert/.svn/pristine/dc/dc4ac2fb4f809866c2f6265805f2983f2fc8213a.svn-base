/* CSS Document */
/*appitem*/
.item_wrap{margin-bottom:20px;}
.item_sub{height:40px; background:#ebebeb; line-height:40px; font-size:16px;}
.item_sub li{float:left; padding-left:30px; cursor:pointer}
.item_sub li.currentcolor{color:#336600;}
.itemlist{width:100%; font-size:16px;}
.itemlist dt{ width:100%; height:58px; background:#f4faf9; border-bottom:1px solid #ebebeb; overflow:hidden}
.itemlist dt h2{ height:35px; margin-top:12px; background:url(../images/item_icon.png) no-repeat 23px 0; text-align:center; line-height:35px; font-size:16px;}
.itemlist dt h2 span{padding:0 4px;}
.itemlist dd{float:left; width:104px; height:35px; border-bottom:1px dashed #B2B2B2; line-height:35px; text-indent:1.2em; overflow:hidden}
.itemlist dd a:hover{color:#336600}
.itemlist dd.greencolor,.itemlist dd.greencolor a{color:#336600}
.itemlist dd.border_solid{border-bottom:1px solid #ebebeb;}
.itemlist dd.border_none{border-bottom:0;}
#itemlist3 dt h2{ background-position:23px -109px;}
#itemlist2 dt h2{ background-position:23px -36px;}
#itemlist4 dt h2{ background-position:23px -72px;}
#itemlist5 dt h2{ background-position:21px -144px;}
#itemlist6 dt h2{ background-position:21px -180px;}

/*applist*/
.app_list ul{ margin:0 5px; overflow:hidden; _width:528px; _margin-right:2px;}
.app_list ul li{float:left; width:100%;  height:65px; padding-top:14px; border-bottom:1px solid #ebebeb; font-size:12px; color:#999999; position:relative}
.app_icon{ width:48px; height:48px; position:absolute; left:5px; top:15px;}
.app_icon img{display:block; width:48px; height:48px;}
.app_info{height:65px; margin:0 120px 0 60px;}
.app_top{ height:28px; line-height:24px;}
.app_name{width:115px; font-size:16px; color:#669900}
.app_name a{color:#669900}
.app_version{width:90px;}
.app_downnum{width:115px;}
.app_star img{float:left; margin-top:6px;}
.app_list ul li p{width:100%; height:24px; white-space:nowrap; overflow:hidden; font-size:13px; line-height:24px;}
.app_down{ width:50px; height:26px; margin-top:4px; display:inline; position:absolute; right:10px; top:20px;}
.app_down img{ display:block; width:50px; height:26px;}

.search_hot{margin-bottom:20px;}
.search_hot #bj_recommend2{height:488px; overflow:hidden;}
.search_no{width:300px; min-height:433px; _height:433px; padding-top:55px; margin:0 auto; text-align:center;}
.search_no img{  width:104px; height:122px; margin-bottom:25px;}
.search_no p{color:#555555; line-height:24px;}
.search_no p a{color:#337b10;}

/*itemgame*/
#item_game{width:208px; overflow:hidden;}
#item_game li{float:left; width:208px; height:59px; border-bottom:1px solid #ebebeb; line-height:59px; text-align:center; letter-spacing:1px; font-size:16px;}
#item_game li a:hover{color:#336600}
#online_games li{border-bottom:1px dotted #B2B2B2;}
#item_game li.currentitem{ background:url(../images/arrow_item.png) no-repeat 40px center; color:#0f6309; font-weight:bold}
#item_game li.currentitem a{color:#0f6309;}
.xtgj,.shgj,.meiti,.tongxin,.yuedu{display:none;}