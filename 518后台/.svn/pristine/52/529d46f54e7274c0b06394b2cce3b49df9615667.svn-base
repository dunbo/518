<include file="../Public/header/" />
<script>
function checkInput(){
		var title = document.getElementById("title").value;
		var picurl = document.getElementById("picurl").value;
		var linkurl = document.getElementById("linkurl").value;
		var channel_pic = document.getElementByName("channel_pic").value;
	if(title.length == 0){
		alert("标题不能为空！");
		return false;
	}else if(picurl.length == 0){
		alert("推广图不能为空！");
		return false;
	}else if(linkurl.length == 0){
		alert("图片链接不能为空！");
		return false;
	}else if(channel_pic.length == 0){
		alert("渠道至少有一个！");
		return false;
	}else if(empty($_POST['linktype'])){
		alert("链接类型不能为空！");
		return false;
	}else if(empty($_POST['status'])){
		alert("图片状态不能为空！");
		return false;
	}else if(empty($_POST['start_tm'])){
		alert("轮播图开始时间不能为空！");
		return false;
	}else if(empty($_POST['end'])){
		alert("轮播图结束时间不能为空！");
		return false;
	}
	
	return true;
}
</script>
