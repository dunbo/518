{// 加载头部公共文件 }
<include file="../Public/header" />

<div class="main" >
<div class="content">
<center>
<form method="post">
<table width="50%" border="0" cellpadding="0" cellspacing="0" class="tb">
	<tr>
		<td colspan="2">4.4配置管理</td>
	</tr>
	<tr>
	<tr>
		<td>电子书显示</td>
		<td>
			<input type="radio" name="ireader_display" value="1" <if condition="$ireader_display eq 1">checked="checked"</if>>开启</input>
			<input type="radio" name="ireader_display" value="0" <if condition="$ireader_display eq 0">checked="checked"</if>>关闭</input>
		</td>
	</tr>
	<tr>
		<td>电子书搜索</td>
		<td>
			<input type="radio" name="ireader_searchable" value="1" <if condition="$ireader_searchable eq 1">checked="checked"</if>>开启</input>
			<input type="radio" name="ireader_searchable" value="0" <if condition="$ireader_searchable eq 0">checked="checked"</if>>关闭</input>
		</td>
	</tr>
	<tr>
		<td>首页双列显示</td>
		<td>
			<input type="radio" name="double_row_switch" value="1" <if condition="$double_row_switch eq 1">checked="checked"</if>>开启</input>
			<input type="radio" name="double_row_switch" value="0" <if condition="$double_row_switch eq 0">checked="checked"</if>>关闭</input>
		</td>
	</tr>
	<tr>
		<td colspan="2"><input type="submit" value="保存修改"></td>
	</tr>
</table>
</form>
</center>
</div>
</div>
<!-- 主页面结束 -->
