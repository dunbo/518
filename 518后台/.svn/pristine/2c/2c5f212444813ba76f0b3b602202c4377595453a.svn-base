<include file="../Public/header" />
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>

<script type="text/javascript" src="/Public/js/jquery.autocomplete-min.js"></script>
<link href="/Public/css/autocomplete.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">
var options, a;
jQuery(function(){
	options = {
		serviceUrl:'/index.php/Sj/Earlyadopters/activity_list',
		minChars:1,
		width: '300px',
		deferRequestBy: 0,
		onSelect: function(value, data){
		}
	};
  a = $('#active_name').autocomplete(options);
});
</script>
<div>
<h3>添加活动</h3>
<form action="__URL__/add_activity_do" method="post" enctype="multipart/form-data">
<table>
	<tr>
		<td>活动名称：<input type="hidden" name="adopters_id" value="{$adopters_id}"></td>
		<td><input type="text" name="active_name" id="active_name" /></td>
	</tr>
	<tr id="my_rank">
		<td>排序：</td>
		<td><input type="text" name="rank" /></td>
	</tr>
	<tr id="my_pic">
		<td>图片：</td>
		<td><input type="file" name="pic_url" /><br />请上传480*180的JPG/PNG</td>
	</tr>
	<tr>
		<td>标题：</td>
		<td><input type="text" name="title" /></td>
	</tr>
	<tr>
		<td>开始时间：</td>
		<td><input id="begintime" name="start_tm" type="text" class="Wdate" onClick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss',startDate:'%y-%M-%d 00:00:00'})" style="width:140px; height:20px" /></td>
	</tr>
	<tr>
		<td>结束时间：</td>
		<td><input id="endtime" name="end_tm" type="text" class="Wdate" onClick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss',startDate:'%y-%M-%d 23:59:59'})" style="width:140px; height:20px" /></td>
	</tr>
</table>
<table>
	<tr>
		<td><input type="submit" value="确定" class="search_btn" /></td>
		<td><input type="button" value="取消" class="search_btn" onclick="javscript:history.go(-1);" /></td>
	</tr>
</table>
</form>
</div>