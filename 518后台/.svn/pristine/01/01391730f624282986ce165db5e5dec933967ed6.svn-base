<link type="text/css" href="/Public/css/co_common.css" rel="stylesheet" />
<link type="text/css" href="/Public/css/account.css" rel="stylesheet" />
<script type="text/javascript" src="/Public/js/co_public.js"></script>
<script>
	function check_all(){
		var r   = "^[0-9]*[0-9][0-9]*$";
		var re   =   new   RegExp(r); 
		var active_price = $('#active_price').val();
		var ad_price = $('#ad_price').val();
		var ad_max_down = $('#ad_max_down').val();
		var ad_pre = $('#ad_pre').val();
		var game_pre = $('#game_pre').val();
		if(active_price > 10 || active_price < 0 || active_price == '' || active_price.substring(active_price.indexOf("."),active_price.length).length>3 || isNaN(active_price) ){
			$("#active_price").css("border","#ff0000 1px solid");
			active_price_num = 1;
		}else{
			$("#active_price").css("border","");
			active_price_num = 2;
		}
		if(ad_price > 10 || ad_price < 0 || !ad_price || ad_price.substring(ad_price.indexOf("."),ad_price.length).length>3 || isNaN(ad_price) ){
			$("#ad_price").css("border","#ff0000 1px solid");
			ad_price_num = 1;
		}else{
			$("#ad_price").css("border","");
			ad_price_num = 2;
		}
		if(ad_max_down > 100 || ad_max_down < 0 || !ad_max_down || isNaN(ad_max_down) || !ad_max_down.match(re)){
			$("#ad_max_down").css("border","#ff0000 1px solid");
			ad_max_down_num = 1;
		}else{
			$("#ad_max_down").css("border","");
			ad_max_down_num = 2;
		}
		if(ad_pre > 100 || ad_pre < 0 || !ad_pre || ad_pre.substring(ad_pre.indexOf("."),ad_pre.length).length>3 || isNaN(ad_pre)){
			$("#ad_pre").css("border","#ff0000 1px solid");
			ad_pre_num = 1;
		}else{
			$("#ad_pre").css("border","");
			ad_pre_num = 2;
		}
		if(game_pre > 100 || game_pre < 0 || !game_pre || game_pre.substring(game_pre.indexOf("."),game_pre.length).length>3 || isNaN(game_pre)){
			$("#game_pre").css("border","#ff0000 1px solid");
			game_pre_num = 1;
		}else{
			$("#game_pre").css("border","");
			game_pre_num = 2;
		}
		
		if(active_price_num == 1 || ad_price_num == 1 || ad_max_down_num == 1 || ad_pre_num == 1 || game_pre_num == 1){
			return false;
		}else if(active_price_num == 2 && ad_price_num == 2 && ad_max_down_num == 2 && ad_pre_num == 2 && game_pre_num == 2){
			return true;
		}
	}
</script>
<div class="newbox" id="edit_channel_newbox">
	<h6><em style="float:left; font-style:normal">编辑渠道分成模式：</em><span class="title_tips" onmouseover="showOrHide1(this)" onmouseout="showOrHide2(this)"></span>　　　　<small>账号名称：{$user}</small>　　　　<small>渠道名称：{$chname}</small></h6>
	<div class="config_list_tips">
		<p>安智市场激活单价、单个软件下载单价：0-10之间数值，保留两位小数广告分成扣量比例、游戏分成扣量比例：百分比，保留两位小数<br />防刷量值：0-100之间整数</p>
		<span class="title_tips_arrow"></span>
	</div>
	<form action="__URL__/editChannel_do" method="post">
	<input type="hidden" name="cid" value="{$cid}" />
	<div class="newbox_cnt">
		<div class="edit_channel_list">
			<div class="title_item">
				<h2>安智市场激活收入：</h2>
			</div>
			<div class="edit_channel_item" style="padding-left:140px;">
				<label>安智市场激活单价：</label>
				<input name='active_price' id='active_price' type="text" class="inputtext" value='{$conf.active_price}' />
				<span>元</span>
			</div>
		</div>
		<div class="clear"></div>
		<div class="edit_channel_list">
			<div class="title_item">
				<h2>广告收入分成：</h2>
			</div>
			<div class="edit_channel_item" style="padding-left:140px;">
				<label>单个软件下载单价：</label>
				<input name='ad_price' id='ad_price' type="text" class="inputtext" value='{$conf.ad_price}' />
				<input type="hidden" value="{$uid}" name="uid" />
				<span>元</span>
			</div>
			<div class="edit_channel_item">
				<label>防刷量值：</label>
				<input name='ad_max_down' id='ad_max_down' type="text" class="inputtext" value='{$conf.ad_max_down}' />
				<span>个</span>
				<div class="clear"></div>
			</div>
			<div class="edit_channel_item">
				<label>广告分成扣量比例：</label>
				<input name='ad_pre' id='ad_pre' type="text" class="inputtext" value='{$conf.ad_pre}' />
				<span>%</span>
			</div>
		</div>
		<div class="clear"></div>
		<div class="edit_channel_list">
			<div class="title_item">
				<h2>游戏收入分成：</h2>
			</div>
			<div class="edit_channel_item" style="padding-left:140px;">
				<label>游戏分成扣量比例：</label>
				<input name='game_pre' id='game_pre' type="text" class="inputtext" value='{$conf.game_pre}' />
				<span>%</span>
			</div>
		</div>
		<div class="clear"></div>
		<div class="table_infors">
			<p>注：全部配置系数必填
			</p>
		</div>
		<input type="hidden" name="charge" value="{$charge}" />
		<input type="hidden" name="user" value="{$users}" />
		<input type="hidden" name="chname" value="{$chnames}" />
		<div class="open_close_btn">
			<input type="submit" value="确定" onclick="return check_all();" />
			<a onclick="tb_remove();" href="javascript:;">取消</a>
			<div class="clear"></div>
		</div>
	</div>
	</form>
</div>
<script type="text/javascript">
function editChannel(){
	var active=document.getElementById("active_price").value;
	var ad_price=document.getElementById("ad_price").value;
	var ad_max_down=document.getElementById("ad_max_down").value;
	var ad_pre=document.getElementById("ad_pre").value;
	var game_pre=document.getElementById("game_pre").value;
	$.ajax({
		type:"POST",
		url:"/index.php/Cooperative/CoAccount/editChannel/",
		data:"cid={$cid}&active_price="+active+"&ad_price="+ad_price+"&ad_max_down="+ad_max_down+"&ad_pre="+ad_pre+"&game_pre="+game_pre,
		dataType:"JSON",
		success: function(json){
			window.location.reload();
		}
	});
}
</script>