<include file="../Public/header" />
<center>
<table border='1'>
    <tr>
        <td>推广名:</td>
        <td>{$pudata.pu_name}</td>
        <td>推广建立时间:</td>
        <td>{$pudata.create_time|date='Y-m-d H:i:s',###}</td>
    </tr>

<form method="GET" action="__URL__/modifyApk">
    <tr><th>推广包名</th><th>推广链</th><th>推广链操作</th><th>生成时间</th></tr>
    <volist name="list" id="vo">
    <tr>
        <td>{$vo.pkg_name}</td>
        <td>{$vo.pu_link}</td>
        <td>
<switch name="vo.status">

<case value="0">(停止推广)</case>

<case value="1">(正在推广)</case>

</switch>
<input type="radio" name='id' value='{$vo.id}' <if condition="$vo.status eq 1">checked</if>>点击推广
      </td>
        <td>{$vo.upload_time|date='Y-m-d H:i:s',###}</td>
    </tr>
    </volist>
<input type="hidden" name="puid" value="{$pudata.id}">
<tr>
<td><input type="submit" value="提交"></td>
</tr>
</form>
</table>
</center>