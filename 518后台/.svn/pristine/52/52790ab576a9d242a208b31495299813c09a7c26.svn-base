<script>
	function opennewwin(str,detain_num,add_num,package)
	{
    $.zxxbox('<div style="width:300px; height:125px" ><form action="__URL__/Download_edit/id/'+str+'" method="post"><p>包名 '+package+':</p><span>填写数量</span><br /><input name="add_num" type="text" value="'+add_num+'"><input type="radio" name="data_type" value="1" />:增量<br/><input name="detain_num" type="text" value="'+detain_num+'"><input type="radio" name="data_type" value="2" checked="checked" />:减量<br /><input name="package" type="text" value="'+package+'" style="display:none;"><input name="" type="submit" value="提交" /><input id="wrapClose" class="wrap_Close" onclick="$.zxxbox.hide()" type="button" value="取消" /></form></div>', {
			title: "安智网",
			bg: false
		}); 
	}	
</script>


