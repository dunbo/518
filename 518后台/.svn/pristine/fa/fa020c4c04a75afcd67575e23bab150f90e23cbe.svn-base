<include file="../../Public/header"  />
<link type="text/css" rel="stylesheet" href="/Public/css/tablelist.css" />
<body style="overflow-x: hidden; overflow-y: auto; ">

<div style="position:relative;margin:5px;"><h2>产品分类管理</h2></div>
<div  style="position:relative;left:50px;margin-bottom:5px">
<a href="__URL__/index?" class="search_btn">返回</a>
<form method='post' action="__URL__/doedit/id/{$_GET.id}" >
<div>
<label for="name">展示位置说明 <span style="color:red;">**<if condition="$_GET['id'] == 85">每行显示9个字</if></span></label>
</div><div>
<input type="text" name="name" id="name" style="width:300px" value="{$result.name}" />
</div><div>
<label for="text">文案内容</label>
</div><div>
<textarea name="text" id="text" rows="30" cols="100" style="background-color:white;">{$result.text}</textarea>
</div><div style="margin-top:10px;">
<input type="submit" onclick="return ckf();" class="search_btn"/>
</div></div>
</form>
<script type="text/javascript">
function ckf(){
    n = document.getElementById('name').value;
    if(n == '') {
        alert('展示位置说明不能为空！');
        return false;
    }
    n = document.getElementById('text').value;
    if(n == '') {
        alert('文案内容不能为空！');
        return false;
    }
    return true;
}
</script>
</body>
</html>