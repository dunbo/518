<include header="../Public/header"/>

<link rel="stylesheet" href="/Public/css/tablelist.css" type="text/css" media="screen" />
<link type="text/css" rel="stylesheet" href="/Public/css/thickbox1.css" />

<script type="text/javascript" src='/Public/js/jquery.js'></script>
<script type="text/javascript" src='/Public/js/thickbox.js'></script>
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>

<script>
    $(function() {
        document.onkeydown = function(e) {
            var ev = document.all ? window.event : e;
            if(ev.keyCode==13) {
                search();
             }
        }
    });
    function search() {
        $("#index").submit();
    }
</script>

<body>
    <br/>
    <div class="search_box">
        <form method="get" action="__URL__/index" name="index" id="index">
            <table width="99%" cellpadding="0" cellspacing="0" class="search_table">
                <tr>
                    <td width="16%">
                        <label>推广名称：</label>
                        <input type="text" class="search_item_text" style="width:150px" name="search_promotion_name" id="search_promotion_name" value="{$search_promotion_name}"/>
                    </td>
                    <td width="16%">
                        <label>包名：</label>
                        <input type="text" class="search_item_text" style="width:150px" name="search_package" id="search_package" value="{$search_package}"/>
                    </td>
                    <td width="16%"><input type="button" value="搜索" onclick="search()" class="search_btn"/></td>
                    <td width="16%"><a href="__URL__/add?modal=true&{$url_param}" class="search_btn thickbox">添加</a></td>
                </tr>
            </table>
        </form>
    </div>
    <div>
        <table cellpadding="0" cellspacing="0" style="margin-top:10px;" class="table_list">
            <thead>
                <tr>
                    <th width="5%">ID</th>
                    <th width="20%">推广名称</th>
                    <th width="20%">包名</th>
                    <th width="15%">下载链接</th>
                    <th width="15%">创建时间</th>
                    <th width="20%">操作</th>
                </tr>
            </thead>
            <tbody>
                <volist name="list" id="list">
                <tr>
                    <td>{$list.id}</td>
                    <td>{$list.promotion_name}</td>
                    <td>{$list.package}</td>
                    <td>{$pre_url}{$list.hash}</td>
                    <td>{$list.create_tm|date="Y-m-d H:i:s",###}</td>
                    <td>
                        <a href="__URL__/edit?id={$list.id}&{$url_param}" class="thickbox">编辑</a>
                        <span>&nbsp;&nbsp;｜&nbsp;&nbsp;</span>
                        <a href="__URL__/del?id={$list.id}" onClick="if(!confirm('确定删除此记录吗?'))return false;">删除</a>
                    </td>
                </tr>
                </volist>
            </tbody>
        </table>
        <center>{$page}</center>
    </div>
</body>