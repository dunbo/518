				<div class="coin_01"></div>
				<div class="coin_02"></div>
			</div>
		</div>
		<div class="wrap_b"></div>
	</div>
	<!--{/if}-->
	<div class="wrap2 soft_wrap">
		<div class="wrap2_t"></div>
		<div class="soft wrap2_m">
			<div class="titles">活动指定游戏</div>
			<ul class="soft_list clear" id="soft-list">
			</ul>
		</div>
		<div class="wrap2_b"></div>
	</div>
	<div class="wrap lottery_wrap">
		<div class="lottery_info clear">
			<img src="<!--{$out.static_url}-->/<!--{$out.prefix}-->/images/txt_02.png"/>
			<p>您帐号还有<span id='lottery_num' ><!--{$out.lottery_num}--></span>次抽奖机会！</p>
			<a onclick="my_prize()" >我的奖品</a>
		</div>
		<div class="rotate">
			<div class="rotate-con">
			<img src="<!--{$out.static_url}-->/<!--{$out.prefix}-->/images/disk2.png" width="100%"/>
			<div <!--{if $out.lottery_num > 0}-->class="rotate-pointer" id='lottery_but' onclick='lottery_click()' <!--{else}-->class="rotate-pointer pointer-disabled" id='lottery_but' <!--{/if}-->  ></div>	
			</div>
			<div class="leaves_center"></div>
			<div class="lottery_bg2"></div>
		</div>
		<p style="padding:15px 0 0; text-align:center; color:#fff">签到天数越多，抽取奖品更丰厚！</p>
	</div>
	<div class="wrap">
		<div class="wrap_t"></div>
		<div class="rule wrap_m">
			<p class="rule_title">活动规则</p>
			<ul class="active_ctn">
				<li>
					<span>1.</span>
					<p>用户必须在已登录状态下签到，才能参与此活动。</p>
				</li>
				<li>
					<span>2.</span>
					<p>活动期间，每个账号每日只有1次签到机会。</p>
				</li>
				<li>
					<span>3.</span>
					<p>签到方法：在本页面点击【打开】【梦幻西游】游戏，即可完成签到，获得1次抽奖机会！（如未安装，要先下载安装哦！）</p>
				</li>
				<li>
					<span>4.</span>
					<p>用户抽奖后，请及时点击【个人信息】，填写收奖联系方式，以便中奖后给您发放实物奖品。</p>
				</li>
				<li>
					<span>5.</span>
					<p>获奖名单将在活动结束页公布，所有实物奖品将在活动结束后的15个工作日内寄出。</p>
				</li>
				<div class="clear"></div>
			</ul>
		</div>
		<div class="wrap_b"></div>
	</div>
</div>
<div class="footer">
	<p>活动最终解释权归安智所有</p>
</div>

<section>
    <div id="body-bg" style="display: none;"></div>
    <div class="tip-box" id="tip-box1"  style="display: none;">
         <div class="wrap">
			<div class="wrap_t"></div>
				<div class="wrap_m">
					<div class="wrap2">
						<div class="wrap2_t"></div>
						<div class="wrap2_m success" id="notice" style="line-height:30px; font-size:16px">
							<p>抱歉，您本次暂未中奖</p>
							<p>祝您下次抽奖好运临门！加油哦！</p>
						</div>
						<div class="wrap2_b"></div>
					</div>
					<a href="javascript:cloBox('#tip-box1');" id="btns_03" class="return">退 出</a>
				</div>
			<div class="wrap_b"></div>
			<i class="icon_01"></i>
			<span class="close_btn" onclick="cloBox('#tip-box1')"></span>
		</div>
    </div>
</section>

<script>
var flags={canMove:true};
function showOpenBox(obj){
	$('input').blur();
	setTimeout(function(){
		var bg_h=$(window).height() + $(document).scrollTop(),
        top_h=  $(obj).height()/2 - $(document).scrollTop();
		$(obj).css("margin-top",-top_h+"px").show();;
		$('#body-bg').css("height",bg_h+"px").show();
		flags.canMove=false;
		window.onresize = function(){
			var bg_h=$(window).height() + $(document).scrollTop(),
				top_h=  $(obj).height()/2 - $(document).scrollTop();
			$('#body-bg').css("height",bg_h+"px");
			$(obj).css("margin-top",-top_h+"px");	
		}
	},200)
}
function cloBox(obj){
    $(obj).hide(); 
    $('#body-bg').hide();
    flags.canMove=true;
}

//弹窗
function pop_tips(notice, url, icon){
	$("#notice").html(notice);
	if(url){
		$('#btns_03').attr('href',url);
	}
	if( icon ) {
		$('.icon_01').hide();
	}else {
		$('.icon_01').show();
	}
	
	showOpenBox('#tip-box1');
	return false;	
}

function randomnum(smin, smax) {
	var Range = smax - smin;
	var Rand = Math.random();
	return (smin + Math.round(Rand * Range));
}


function runzp_new(num,prize_num){
    var per_angle = 360/prize_num;
	if(num == 0){
		var angle_num_start=0;
		var angle_num_end=0;		
	}else{
		var angle_num_start=(num-1)*per_angle+3;
		var angle_num_end=(num)*per_angle-3;
	}
	var angle_num = randomnum(angle_num_start,angle_num_end);
	$(".rotate-pointer").rotate({
		duration:2000,
		angle: 0,
		animateTo:(1800+angle_num),
		easing: $.easing.easeOutSine, 
		callback: function(){
		}
	});
}

//大转盘
function runzp(num){
	var angle_num = 0;
	if( parseInt(num) < 0 || parseInt(num) > 6 ){
	  runzp_new(0,6);
	}else{
		if(parseInt(num) == 1) {
			num = 4;
		}else if(parseInt(num) == 2 ) {
			num = 3;
		}else if(parseInt(num) == 3 ) {
			num = 2;
		}else if(parseInt(num) == 4 ) {
			num = 5;
		}else if(parseInt(num) == 5 ) {
			num = 1;
		}
 	  runzp_new(num,6);
	}	
}


function openApp2(pkg,softid,aid,sid) {
	the_soft = [softid];
	$.ajax({
		url: '/lottery/vacation_gift_open.php',
		data: 'softid='+softid+'&sid='+sid+'&package='+pkg+'&aid='+aid,
		type: 'get',
		success: function(data) {
			window.AnzhiActivitys.openAppForActivity(pkg,the_soft);
		}
	});
}

$(function(){
    $("body").bind('touchmove', function (e) {
        if(!flags.canMove){
            e.preventDefault();
        }
    });
})


var sid = '<!--{$out.sid}-->';
var aid = '<!--{$out.aid}-->';
var prefix = '<!--{$out.prefix}-->';
var is_login = '<!--{$out.is_login}-->';
var is_sign = '<!--{$out.is_sign}-->';
var stop = '<!--{$out.stop}-->';
var lottery_num = '<!--{$out.lottery_num}-->';
var login_url = '<!--{$out.login_url}-->';
var version_code = '<!--{$out.version_code}-->';
var static_path = '<!--{$out.static_url}-->/<!--{$out.prefix}-->/';

$(function(){
    setTimeout(function(){
		var go_from = 2;
		my_soft(aid,sid,1,go_from);
	}, 500);
})

function my_prize(){
	<!--{if $out.is_login == 1}-->
		location.href="/lottery/<!--{$out.prefix}-->/userinfo.php?types=1&sid="+sid+"&aid="+aid;
	<!--{else}-->
		login('<!--{$out.login_url}-->','<!--{$out.version_code}-->');
	<!--{/if}-->
}


function onLoginComplete(sid,tip)
{
	if(tip == "登录成功"){
		sid_str = sid.replace("PHPSESSID=", "");
		location.href="/lottery/"+prefix+"/index.php?sid="+sid_str+"&aid=<!--{$out.aid}-->";	
	}
}

function login(login_url,version_code)
{
	if(version_code >= 5700 ){
		window.AnzhiActivitys.login();
		javascript:window.history.forward(1); 
	}else{
		location.href=login_url;
	}
}

function openApp(pkg, softid, aid, sid) {
	<!--{if $out.is_login == 1}-->
		sign_do(pkg,softid,aid,sid);
	<!--{else}-->
		login('<!--{$out.login_url}-->','<!--{$out.version_code}-->');
	<!--{/if}-->	
}

function sign_do(pkg, softid, aid, sid){
	if(is_sign == 1) {
		openApp2(pkg,softid,aid,sid);
		return false;
	}
	$.ajax({
		url: '/lottery/<!--{$out.prefix}-->/sign.php',
		data: 'sid='+sid+'&aid='+aid,
		type: 'post',
		dataType: 'json',				
		success: function(data) {
			if(data.code == 1) {
					lottery_num = parseInt(lottery_num)+1;
					$('#lottery_num').html(lottery_num);
					openApp2(pkg, softid, aid, sid);
					//跳转签到页面
					setTimeout(
						function() {
							location.href="/lottery/<!--{$out.prefix}-->/sign.php?success=1&sid="+sid+"&aid="+aid;
						},4000
					);
					return false;
			}else if(data.code == 2) {
				openApp2(pkg,softid,aid,sid);
			}else{
				pop_tips(data.msg, '', 1);	
			}			
		}
	});
}

//抽奖
function lottery_click(){
	<!--{if $out.is_login == 2}-->
		login('<!--{$out.login_url}-->','<!--{$out.version_code}-->');
		return false;
	<!--{/if}-->
	if(parseInt(lottery_num) <= 0 ){
		$('#lottery_but').attr('class', 'rotate-pointer pointer-disabled');
		pop_tips("剩余抽奖次数不足！", '', 1);			
		return false;
	}
	$('#lottery_but').attr('onclick', '');
	$.ajax({
		url: '/lottery/<!--{$out.prefix}-->/lottery.php',
		data: 'sid='+sid+'&aid='+aid,
		type: 'post',
		dataType: 'json',
		success: function(data) {
			if(data.code == 1) {
				lottery_num = parseInt(lottery_num)-1;
				$('#lottery_num').html(lottery_num);
				if(data.pid != -1){
					setTimeout(
						function() {
							location.href="/lottery/<!--{$out.prefix}-->/userinfo.php?types=2&sid="+sid+"&aid="+aid+"&prizename="+data.prizename;
						},4000
					);
					runzp(data.pid);
				}else if(data.pid == -1){
					runzp(0);
				}
				if(lottery_num > 0) {
					setTimeout(function() {
						$('#lottery_but').attr('class', 'rotate-pointer');
						$('#lottery_but').attr('onclick', 'lottery_click();');
						if(data.pid == -1) {
							pop_tips(data.msg);		
						}
					}, 3000);	
				}else{
					setTimeout(function() {
						if(data.pid == -1) {
							pop_tips(data.msg);		
						}
						$('#lottery_but').attr('class', 'rotate-pointer pointer-disabled');
					}, 3000);
				}				
			}else if(data.code == 2) {
				location.href=data.url+"?sid="+sid+"&aid="+aid;
			}else {
				pop_tips(data.msg, '', 1);			
			}
		}
	});
}
</script>
</body>
</html>