	function get_softname(){
		var package = $.trim($("#package").val());
        if (package == '') {
            return 0;
        }
        var param = {
            package : package
        }
		$.ajax({
            url:'__URL__/pub_check_package',
            type:'POST',
            data:param,
            dataType:'json',
            success:function(data) {
                ret = data.status;
                if(ret){
                    $("#softname").html("软件名称："+data.info);
                }else{
                    $("#softname").html('');
                    alert("包名不存在，请重新填写！");
                }
            }
        });
	}
