		$('#channel_div input:checked').each(function(){			$('#TB_ajaxContent .l_cid_' + this.value).find('input').attr('checked', 'true');		});	}</script><table width="100%" border="1" align="center"><tr><td align="right"></td><td align="left"></td></tr></table><form action="__URL__/scroll_channel_addto" method="post"><table width="100%" border="1"><tr><td><a href="__APP__/Public/showChannel?callback=submitChannel&type=checkbox&ready=check_arr&selected=onclikChannel" class="thickbox">选择指定渠道</a><br />	<div id="channel_div"></div></td><td></td><td></tr><tr><volist name='channel_list' id='info'><tr><td><input type="checkbox" name="channel_pic[]" id="channel_pic[]"  value="{$info.cid},{$info.chname}" checked>{$info.chname}</td><td></td></tr></volist></tr><tr><td align="left"><input type="submit" value="提交指定渠道"/><input type="button" value="全选/反选" onclick="selectAll()"/></td><td></td></tr></form></table><table width="100%" border="1"><tr><td colspan="5">渠道列表</td></tr><tr><tr><td>渠道编号</td><td>渠道名称</td><td>别名<font color="red">*无需添加时最好别动</font></td><td>操作</td></tr><tr><volist name='webmarket_picture_list' id='info'><form action="__URL__/add_channel" method="post"><tr><td>{$info.cid}</td><td>{$info.chname}</td><td><input type="text" name="nickname" value={$info.nickname}>	<input type="hidden" name="cid" value={$info.cid}>	<input type="hidden" name="chname" value={$info.chname}><input type="submit" value="提交"></td></form><td><a href="__URL__/delete_channel/id/{$info.id}">删除</a></td></tr></volist></tr></table>