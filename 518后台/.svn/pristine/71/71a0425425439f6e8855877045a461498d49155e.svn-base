<include file="../../Public/header"  />
<link type="text/css" rel="stylesheet" href="/Public/css/tablelist.css" />
<script type="text/javascript" src='/Public/js/thickbox-compressed.js' ></script>
<link type="text/css" rel="stylesheet" href="/Public/css/thickbox.css" />
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>
<script type="text/javascript" src="/Public/js/zhiyoo/common.js"></script>
<style type="text/css">
#submid{height:31px;}

</style>
<body style="overflow-x: hidden; overflow-y: auto; ">
<form method='post' action="__URL__/edit_rank" onsubmit="return clickConfirm('确定保存优先级更改吗？');">
<div style="float:right;margin: 5px;">
	<input class="search_btn" style="display:none;float:left;" type="submit" id="submid" value="保存优先级">
	<a class="search_btn" style="display:inline-block;" href="javascript:priority('P_id');" id="priorityid">编辑优先级</a>
	
	<span style="margin:10px;padding:3px;background-color:white"><a href="__URL__/add?" class="thickbox search_btn" style="display:inline-block;">添加分类</a></span>
</div>
<table border="0" cellpadding="0" cellspacing="0" class="table_list">
	<thead>
		<tr>
			<th width="65">
				<a href="__URL__/group_list/field/rank/order/{$order}">优先级↓↑</a>
			</th>
			<th ><a href="__URL__/group_list/field/groupname/order/{$order}">标签分类↓↑</a></th>
			<th ><a href="__URL__/group_list?corder={$corder}">标签个数↓↑</a></th>
			<th >操作</th>
		</tr>
	</thead>
	<volist name="list" id="tags">
	<tr>
		<td id="P_id">
			<a>{$tags.rank|default=''}</a>
			<input type="text" name="level[{$tags.groupid}]" onkeyup="this.value=replaceNum(this.value);" size="4" id="level" style="display:none;" value="{$tags.rank|default=''}" /> 
		</td>
		<td><a href="/index.php/Zhiyoo/Tag/taglist/groupid/{$tags.groupid}/">{$tags.groupname|default=' '}</a></td>
		<td>{$tags.count|default='0'}</td>
		<td><a href="__URL__/rename?groupid={$tags.groupid}" class="thickbox" style="color:blue">重命名</a><if condition="$tags.count eq 0">|<a href="__URL__/doedit?groupid={$tags.groupid}&action=del" onclick="return del();" style="color:blue">删除</a>
		</if></td>
	</tr>
	</volist>
</table>
</form>
<script>
function del()
  {
   if(confirm("确定要删除数据吗？"))
    return true;
   else return false
  }
</script>
</body>
</html>