<script type="text/javascript">
    function check() 
	{
        var category_name = $("#category_name").val();
        if (!category_name) 
		{
            alert("分类名称不能为空");
            return false;
        }
        var download_limit = $("#download_limit").val();
        var reg = /^\s*\d+(\.\d+)?\s*$/;
        if (download_limit && !reg.test(download_limit)) 
		{
            alert("请填写正确的下载限制");
            return false;
        }
        return true;
    }
</script>

