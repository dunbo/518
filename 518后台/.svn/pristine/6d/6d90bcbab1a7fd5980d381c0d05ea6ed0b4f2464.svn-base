			console.log($(sender).attr('name'));
			$(sender).attr("value","");
			return false;    			
		}*/
		if(fileSize > 204800){			 
			set_errmsg(true,'图片大于200K');
			console.log($(sender).attr('name'));
			$(sender).attr("value","");
			return false;    			
		}
		
		//绑定事件并写入文件 
		var str ="<img src='" + newimg.src +"' title='点击删除' onclick='removeImg(this);' id='" + img +"'";
