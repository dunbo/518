<include file="../Public/header" />
<script>

function checkEle(){
    var dname  = document.getElementById('mname').value;
    if(dname ==""){
      alert("厂商名不能为空！");
      return false;
    }
}
</script>
<body>
<span><h3> <a href="__APP__/Sj/Market/manufacturers">厂商列表</a></h3><h1>编辑厂商</h1></span>
<!--
-->
<P>
<P>
<table  height="80%" border="10" cellspacing="2" >
<form method="post" action="__APP__/Sj/Market/modifyFactory">

    <tr>
        <td>厂商名称（必选，需跟系统读出相同）</td>
        <td><input type="text" id="mname" size="60" name="mname" value="{$info.mname}"/></td>
    </tr>
    <tr>
        <td>显示设置（选择默认软件是否显示，必选）</td>
        <td><input type="radio" id="status1" value="1" name="status" <if condition="$info.status eq 1 " >checked</if>/>显示<input type="radio" id="status2" value="0" name="status" <if condition="$info.status eq 0 " >checked</if>/>不显示</td>
    </tr>
        <tr>
        <td>备注（选填）</td>
        <td><textarea  id ="note" name="note" rows="3" cols="50">{$info.note}</textarea></td>
    </tr>
            <tr>
        <td><input type="hidden" value="{$info.mid}" name="mid"></td>
        <td><input type="submit" value="提交" onclick="return checkEle()"></td>
      </tr>

    </tr> 
</form>
</table>
<br/>
	<tr>{$page}</tr>
<br/>
</body>
