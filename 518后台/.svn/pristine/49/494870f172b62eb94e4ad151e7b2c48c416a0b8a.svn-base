<include header="../Public/header"/>

<link rel="stylesheet" href="/Public/css/tablelist.css" type="text/css" media="screen" />
<link rel="stylesheet" href="/Public/css/thickbox1.css" type="text/css" media="screen" />

<script type="text/javascript" src='/Public/js/jquery.js'></script>
<script type="text/javascript" src='/Public/js/thickbox.js'></script>
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>

<style>
    .future_class {
        background-color:#CCCCCC
    }
</style>

<body>
    <div class="search_box">
        <table width="99%" cellpadding="0" cellspacing="0" class="search_table">
            <tr>
                <td><a class="search_btn thickbox" href="__URL__/add_content?">添加</a></td>
                <td><a class="search_btn" href="__URL__/index?overdue=<if condition='$overdue eq 1'>-1<else/>1</if>"><if condition='$overdue eq 1'>未过期<else/>已过期</if></a></td>
            </tr>
        </table>
    </div>
    <div>
        <table cellpadding="0" cellspacing="0" style="margin-top:10px;" class="table_list">
            <thead>
                <tr>
                    <th width="4%">软件名称</th>
                    <th width="8%">软件包名</th>
                    <th width="8%">运营商</th>
                    <th width="8%">渠道</th>
                    <th width="10%">开始时间</th>
                    <th width="10%">结束时间</th>
                    <th width="8%">操作</th>
                </tr>
            </thead>
            <tbody>
                <volist name="list" id="list">
                <tr <if condition='$list.start_at gt $now'>class='future_class'</if>>
                    <td>{$list.softname}</td>
                    <td>{$list.package}</td>
                    <td>{$list.oname}</td>
                    <td>{$list.chname}</td>
                    <td>{$list.start_at|date="Y-m-d H:i:s",###}</td>
                    <td>{$list.end_at|date="Y-m-d H:i:s",###}</td>
                    <td>
                        <if condition='$overdue eq 1'> <a href="__URL__/edit_content?id={$list.id}&life=1" class="thickbox search_btn">复制上线</a><!--过期数据不可以编辑和删除-->
                        <else/>
                            <a href="__URL__/edit_content?id={$list.id}" class="thickbox blue">编辑</a>
                            <span>&nbsp;&nbsp;&nbsp;</span>|<span>&nbsp;&nbsp;&nbsp;</span>
                            <a href="__URL__/delete_content?id={$list.id}" class="blue" onclick="return confirm('确定要删除此记录吗？');">删除</a>
                        </if>
                    </td>
                </tr>
                </volist>
            </tbody>
        </table>
        <center>{$page}</center>
    </div>
</body>