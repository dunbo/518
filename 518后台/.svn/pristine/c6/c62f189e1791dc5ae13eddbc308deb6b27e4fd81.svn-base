	function check_form(){
		var enable=true;
		var activity_type_bank = "<?php echo $result[0]['activity_type_bank'] ?>";
		if(activity_type_bank == 5 || activity_type_bank == 7 || activity_type_bank == 8){
			var edit_start_tm = $("#edit_start_tm").val();
			var time = new Date(edit_start_tm).getTime();
			var time_sec  = Math.floor(time/1000);
			var old_start_tm = "<?php echo $result[0]['start_tm'] ?>";
			if(time_sec>old_start_tm){
				if(confirm('活动开始时间调整，会清除已有的用户数据!请谨慎操作。')) {
					return true;
				}else{
					return false;
				}
			}
			if(activity_type_bank == 5){
				var edit_end_tm = $("#edit_end_tm").val();
				var end_time = new Date(edit_end_tm).getTime();
				var dates = Math.abs((time - end_time))/(1000*60*60*24);
				if(dates > 10){
					alert('活动时间不可超过10天');
					return false;
				}
			}	
		}
		var type = $("input[name='cover_user_type']:checked").val();
		var a_start = $("#activation_date_start").val();
		var a_end = $("#activation_date_end").val();
		if(type==2&&!a_start&&!a_end){
			alert('激活时间需要填写开始时间及结束时间');
			return false;
		}
		if((a_start&&!a_end)||(!a_start&&a_end)){
			alert('激活时间需要填写开始时间及结束时间');
			return false;
		}
		var pkg = $("#package").val();
		if(pkg){
			$.ajax({
				url: '/index.php/Sj/ExtentV1/pub_check_soft_filter/package/'+pkg,
				type: 'get',
				async:false,
				success: function(data){
					if(data){
						if(!confirm(data)){
							enable = false;
						}else{
							enable = true;
						}
					}
				}
			});
		}
		if(!enable){
			return false;
		}else{
		//	return form_chk();
		}
	}
    
