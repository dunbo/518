<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link rel="stylesheet" type="text/css" href="/Public/css/style.css" />
<script type="text/javascript" src='/Public/js/jquery.js'></script>
<script type="text/javascript" src='/Public/js/jquery.validate.min.js'></script>
<script type="text/javascript" src='/Public/js/jtextcount.js'></script>
<script language="javascript">
$(document).ready(function(){
    $('#miaoshu').inputlimitor({
		limit: 255,
		boxId: 'miaoshu_limit',
		boxAttach: false
	});
	$('#beizhu').inputlimitor({
		limit: 255,
		boxId: 'beizhu_limit',
		boxAttach: false
	});
});

function checkform(){
	if (document.channel_add_form.parent_id.value.length == 0) { 
		alert("请选择上级频道!");
		document.channel_add_form.parent_id.focus();
		return false;
	}
	if (document.channel_add_form.channel_name.value.length == 0) { 
		alert("请输入频道名称!");
		document.channel_add_form.channel_name.focus();
		return false;
	}
	if (document.channel_add_form.channel_descript.value.length == 0) { 
		alert("请输入频道描述!");
		document.channel_add_form.channel_descript.focus();
		return false;
	}
}
</script>
</head>
<body>
<div class="main" >
<div class="content">
<center>
<form action="__URL__/channel_add_do" method="post" id="channel_add" name="channel_add_form" enctype="multipart/form-data" onsubmit="return checkform()"> 
<table width="90%" border="0" cellpadding="0" cellspacing="0" class="tb">
  <tr>
    <td colspan="3" align="center"><h2>添加频道</h2></td>
  </tr>
  <tr>
	<td width="30%" align="center">频道名称:</td>
	<td width="30%" align="center"><input type="text" name="channel_name" class="required" /></td>
	<td width="30%" align="center"><font color="red">*</font></td>
  </tr>
  <tr>
	<td width="30%" align="center">上级频道：</td>
	<td width="30%" align="center">
		{$channnel_category}
	</td>
	<td width="30%" align="center"><font color="red">*</font></td>
  </tr>
  <tr>
	<td width="30%" align="center">频道描述：</td>
	<td width="30%" align="center">
		<textarea id="miaoshu" name="channel_descript" class="jTextCount-text"  cols="40" rows="8"></textarea>
	</td>
	<td width="30%" align="center">
	    <font color="red">*</font>
	    <span id="miaoshu_limit" style="color: green">允许输入255个字符</span>
	</td>
  </tr>
  <tr>
	<td width="30%" align="center">模板：</td>
	<td width="30%" align="center">
	    <select name="tmp_id" class="required">
		    <optgroup label="选择模板">
			    <option value="1" selected>默认模板</option>
			</optgroup>
		</select>
		<!--
		<?php //foreach($tmp_list as $tmp):?>
			    <option value="<?php //echo $tmp['id']?>"><?php //echo $tmp['tmp_name']?></option>
		<?php //endforeach;?>
		-->
	</td>
	<td width="30%" align="center"><font color="red">*</font></td>
  </tr>
  <tr>
	<td width="30%" align="center">备注：</td>
	<td width="30%" align="center">
	    <textarea id="beizhu" rows="5" cols="30" name="note" class="jTextCount-text"></textarea>
	</td>
	<td width="30%" align="center">
	    <span id="beizhu_limit" style="color: green">允许输入255个字符</span>
	</td>
  </tr>
  <tr>
	<td width="30%" align="center"><input type="submit" value="提交" /></td>
	<td width="30%" align="center"><input type="reset" value="重置" /></td>
	<td width="30%" align="center"></td>
  </tr>
</table>
</form>
</center>
</div>
</div>
</body>
</html>

