<include file="../../Public/header"/>

<link rel="stylesheet" href="/Public/css/tablelist.css" type="text/css" media="screen" />
<link rel="stylesheet" href="/Public/css/thickbox1.css" type="text/css" media="screen" />

<script type="text/javascript" src='/Public/js/jquery.js'></script>
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>
<script type="text/javascript" src='/Public/js/thickbox.js'></script>

<body>
    <div style="padding-left:10px;padding-top:5px;font-size:14px">
        <a href="__URL__/index" class="blue">框架协议</a> > 录入保证金
    </div>
    <ul class="tab_title margin_top">
        <li class="current"><a href="#">收款</a></li>
        <li><a href="__URL__/add_invoice_detail?framework_id={$framework_id}">发票/票据</a></li>
    </ul>
    <div class="search_box">
        <table width="99%" cellpadding="0" cellspacing="0" class="search_table">
            <tr>
                <td width="10%"><a href="__URL__/add_account?framework_id={$framework_id}&modal=true" class="thickbox search_btn">录入保证金</a></td>
                <td width="10%"><a href='__URL__/add_account_detail?id={$framework_id}&down=1' class="search_btn">导出报表</a></td>
                <td><p style="text-align:right">已保证金：{$account_input_sum}<span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>待抵扣：{$left_account}</p></td>
            </tr>
        </table>
    </div>
    <div>
        <table cellpadding="0" cellspacing="0" style="margin-top:10px;" class="table_list">
            <thead>
                <tr>
                    <th width="4%">序号</th>
                    <th width="8%">录入时间</th>
                    <th width="8%">最近一次编辑时间</th>
                    <th width="8%">收款金额</th>
                    <th width="8%">收款日期</th>
                    <th width="8%">备注</th>
                    <th width="8%">操作</th>
                </tr>
            </thead>
            <tbody>
                <volist name="list" id="record">
                    <tr>
                        <td>{$record.list_number}</td>
                        <td><if condition="$record.create_time eq 0">-<else/>{$record.create_time|date="Y-m-d H:i:s",###}</if></td>
                        <td><if condition="$record.update_time eq 0">-<else/>{$record.update_time|date="Y-m-d H:i:s",###}</if></td>
                        <td><if condition="$record.account_input eq null">-<else/>{$record.account_input}</if></td>
                        <td><if condition="$record.account_input_time eq 0">-<else/>{$record.account_input_time|date="Y-m-d H:i:s",###}</if></td>
                        <td>{$record.remark}</td>
                        <td><a href="__URL__/edit_account?id={$record.id}&modal=true" class="thickbox blue">编辑</a>&nbsp;｜&nbsp;<a href="__URL__/delete_account?id={$record.id}" class="blue" onclick="return confirm('确定要删除此记录？');">删除</a></td>
                    </tr>
                </volist>
            </tbody>
        </table>
        <center>{$page}</center>
    </div>
</body>