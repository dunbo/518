<include file="../../Public/header"  />
<link type="text/css" rel="stylesheet" href="/Public/css/tablelist.css" />
<script type="text/javascript" src='/Public/js/thickbox-compressed.js' ></script>
<link type="text/css" rel="stylesheet" href="/Public/css/thickbox.css" />
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>
<style type="text/css">
.tbspan{font-size:15px;margin:20px 6px;font-weight: bold;height:30px;background: #cdd;}
.radiotype{margin:3px;}
</style>
<script type="text/javascript">
function checkjpurl(){
	return true;
}
function checkstatus(){
	var obj = document.getElementsByClassName('radiotype');
	for(var i = 0;i<obj.length ;i++){
		obj[i].checked = false;
	}
}
</script>
<body>

<h3>添加运营位</h3>
<table border="0" cellpadding="0" cellspacing="0" class="table_list">
<form method="post" action="__URL__/add_submit/type/{$ltype}" enctype="multipart/form-data">
<tr>
<td colspan="2" class="tbspan">
图片
</td>
</tr>
<tr>
	<td>宣传图片上传：</td>
	<td><span><input type="file" name="img"></span></td>
</tr>
<tr>
<td colspan="2" class="tbspan">
链接
</td>
</tr>
<tr>
	<td ><input type="radio" value="0" name="cat" onclick="checkstatus()"> 客户端</td>
	<td style="text-align:left">
	<volist name="jump" id="vo" mod='6'>
	<input type="radio" value="{$vo.operation_type}" name="op_type" class="radiotype">
	<span style="margin-right:15px;">{$vo.name}</span>
	<eq name= "mod" value= "0" ><br/></eq> 
	</volist>
	</td>
</tr>	
<tr>
	<td><input type="radio" value="1" name="cat" onclick="checkstatus()"> 栏目</td>
	<td style="text-align:left">
	<volist name="column" id="vo" mod='6'>
	<input type="radio" value="{$vo.cid}" name="cid" class="radiotype">
	<span style="margin-right:15px;">{$vo.name}</span>
	<eq name= "mod" value= "0" ><br/></eq> 
	</volist>
	</td>
</tr>
<tr>
	<td><input type="radio" value="12" name="cat" onclick="checkstatus()"> 内容专题</td>
	<td style="text-align:left">
	<volist name="pref" id="vo" mod='6'>
	<input type="radio" value="{$vo.cid}" name="pid" class="radiotype" >
	<span style="margin-right:15px;">{$vo.name}</span>
	<eq name= "mod" value= "0" ><br/></eq> 
	</volist>
	</td>
</tr>	
<tr>
	<td><input type="radio" value="8" name="cat" onclick="checkstatus()" <if condition="$info.cat eq 8">checked</if>> 版块</td>
	<td style="text-align:left">
	<input id="newfid" type="hidden" name="fid" value="0">
	<span id="forumlist" class="cat8"></span><a id="furl" href='__URL__/forum_list/<if condition="$chkfid">fid/{$chkfid}</if>' class="thickbox" style="text-decoration: underline;color: red;">选择板块
	</td>
	
</tr>
<tr>
	<td><input type="radio" value="9" name="cat" onclick="checkstatus()" <if condition="$info.cat eq 9">checked</if>> 帖子</td>
	<td style="text-align:left" >
	<input id="newtid" type="hidden" name="tid" value="0">
	<span id="thread" class="cat9" style="margin-right: 20px;"></span><a id="tdurl" href="__URL__/add_thread/" class="thickbox" style="text-decoration: underline;color: red;">编辑
	</td>
</tr>
<tr>
	<td><input type="radio" value="10" name="cat"> 内部链接地址</td>
	<td style="text-align:left" id="innerurl">
	<input type="text" name="innerurl" style="width:400px">
	</td>
</tr>
<tr>
	<td><input type="radio" value="11" name="cat"> 外部链接地址</td>
	<td style="text-align:left" id="outerurl">
	<input type="text" name="outerurl" style="width:400px">
	</td>
</tr>
<tr>	
	<td colspan="2"><input type="submit" name="sub" value="提交" style="display:inline-block;margin:10px auto" onclick="return checkjpurl()" class="search_btn">
	
	<a style="display:inline-block;margin:10px auto" class="search_btn" href="__URL__/active_list/type/{$ltype}">取消</a>
	</td>
</tr>
</form>
<table>
</body>
</html>
