<script type="text/javascript">
    function check() {
        var keyword = $("#keyword").val();
        if (!keyword) {
            alert("关键字不能为空");
            return false;
        }
        return true;
    }
</script>

<form action="__URL__/add_include_exclude_keyword" method="post">
<table>
    <tbody>
        <tr>
            <td>关键字：</td>
            <td><input id="keyword" name="keyword"/></td>
        </tr>
        <tr>
            <td>备注：</td>
            <td><textarea id="remark" name="remark" rows="10" cols="40"></textarea></td>
        </tr>
        <tr>
            <td><input type="submit" value="提交" onclick="return check();"/></td>
            <td><input type="button" value="取消" onclick="tb_remove()"/></td>
        </tr>
    </tbody>
</table>
</form>
