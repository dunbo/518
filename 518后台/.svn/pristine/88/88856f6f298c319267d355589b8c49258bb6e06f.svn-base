	<input type="hidden" name="p" value="{$p}" />
	</td>
</tr>
<tr>
	<td>排序：</td>
	<td><input type="text" name="rank" value="{$result.rank}" /></td>
</tr>
<tr>
	<td>链接地址：</td>
	<td><input type="text" name="article_link" value="{$result.article_link}" /></td>
