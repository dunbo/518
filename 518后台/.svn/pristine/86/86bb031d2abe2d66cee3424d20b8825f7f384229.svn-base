<include file="../../Public/header"  />
<link type="text/css" rel="stylesheet" href="/Public/css/tablelist.css" />
<script type="text/javascript" src='/Public/js/thickbox-compressed.js' ></script>
<link type="text/css" rel="stylesheet" href="/Public/css/thickbox.css" />
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>
<script type="text/javascript" src="/Public/js/zhiyoo/common.js"></script>
<style type="text/css">
#submid{height:31px;}
h2{margin:10px;}
</style>
<body style="overflow-x: hidden; overflow-y: auto; ">
<div style="float:left;">
<h2>当前位置：网站地图 > {$parent.name}</h2>
</div>
<form method='post' action="__URL__/edit_rank" onsubmit="return clickConfirm('确定保存优先级更改吗？');">
<div style="float:right;margin: 5px;">
	<input class="search_btn" style="display:none;float:left;" type="submit" id="submid" value="保存优先级">
	<a class="search_btn" style="display:inline-block;" href="javascript:priority('P_id');" id="priorityid">编辑优先级</a>
	
	<span style="margin:10px;padding:3px;background-color:white"><a href="__URL__/add_link/id/{$parentid|default=0}/" class="thickbox search_btn" style="display:inline-block;">添加链接</a></span>
</div>
<table border="0" cellpadding="0" cellspacing="0" class="table_list">
	<thead>
		<tr>
			<th width="65">
				<a href="__URL__/linklistsec/id/{$parentid|default=0}/ordertype/rank/order/{$order}/">优先级↓↑</a>
			</th>
			<th >展示名称</th>
			<th >链接地址</th>
			<th >操作</th>
			<th >状态</th>
		</tr>
	</thead>
	<volist name="linkdata" id="val">
	<tr>
		<td id="P_id">
			<a>{$val.rank|default=''}</a>
			<input type="text" name="level[{$val.id}]" onkeyup="this.value=replaceNum(this.value);" size="4" id="level" style="display:none;" value="{$val.rank|default=''}" /> 
		</td>
		<td>{$val.name|default=' '}</td>
		<td><a href="{$val.link}" target="_blank">{$val.link|default=''}</a></td>
		<td>
			<a href="__URL__/edit_link/id/{$val.id}" class="thickbox" style="color:blue">编辑</a>|
			<a href="__URL__/updateStatus/id/{$val.id}/status/-1" onclick="return clickConfirm('确定要删除此条数据吗？');" style="color:blue">删除</a>
		</td>
		<td>
			<if condition="$val.status eq '0'" >
			<a href="__URL__/updateStatus/id/{$val.id}/status/1/" onclick="return clickConfirm('确定要更改为启用吗？');"  title="点击切换状态为启用" style="color:red">停用</a> 
			<elseif condition="$val.status eq '1'" />
			<a href="__URL__/updateStatus/id/{$val.id}/status/0/" onclick="return clickConfirm('确定要更改为停用吗？');"  title="点击切换状态为停用">启用</a> 
			</if>
		</td>
	</tr>
	</volist>
</table>
</form>

</body>
</html>