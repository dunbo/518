			</div>
		</div>
	</div>
	<!--{if $out['is_login'] == 2}-->
	<div class="login logined">
		<div class="logined_l">
			<p>签到抽奖之前，要先登录哦</p>
		</div>
		<div class="logined_r">
			<a href="javascript:login('<!--{$out.login_url}-->','<!--{$out.version_code}-->');" class="login_btn">登录</a>
		</div>
	</div>
	<!--{/if}-->
	<!--{if $out['is_login'] == 1}-->
	<div class="wrap">
		<div class="wrap_t"></div>
		<div class="wrap_m">
			<div id="login_wrap">
				<div class="logined">
					<div class="logined_l">
						<p>您已登录账号为：<!--{$out.username}--></p>
						<div class="wrap2" style="margin-top:35px; margin-bottom:0">
							<div class="wrap2_t"></div>
							<div class="wrap2_m">
							<div class="star_list clear">
								<!--{foreach from=$out.tm_config item='val' key='k'}-->
										<!--{if $val.status eq 1 }--> 
										<span class="star_gold"></span>							
										<!--{else}-->
										<span></span>
										<!--{/if}-->
								<!--{/foreach}-->	
							</div>
							</div>
							<div class="wrap2_b"></div>
						</div>
					</div>
					<div class="logined_r">
						<a href="/lottery/<!--{$out.prefix}-->/userinfo.php?types=3&sid=<!--{$out.sid}-->&aid=<!--{$out.aid}-->">个人信息</a>
