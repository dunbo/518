<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
<meta content="telephone=no" name="format-detection">
<meta name="keywords" content="" />
<meta name="description" content="" />
<title>评论可回复活动</title>
<link type="text/css" rel="stylesheet" href="<!--{$out.static_url}-->/comment_reply/css/common.css?v1"/>
<script type="text/javascript"  src="http://img4.anzhi.com/static/public/js/jquery-1.8.0.min.js"></script>
</head>
<script>
var sid = '<!--{$out.sid}-->';
var aid = '<!--{$out.aid}-->';
//下载软件
function download_apk()
{
	var softid = "<!--{$out.soft_info['softid']}-->";
	var pkgName = "<!--{$out.soft_info['package']}-->";
	var name = "<!--{$out.soft_info['softname']}-->";
	var versionCode = "<!--{$out.soft_info['version_code']}-->";
	var size = "<!--{$out.soft_info['filesize']}-->";
	var flag = 1;
	window.AnzhiActivitys.downloadForActivity(parseInt(aid),parseInt(softid),pkgName,name,parseInt(versionCode),parseInt(size),flag);
	//下载跳转到下载列表 但是要有足够内存
	//window.location.href="anzhimarket://task?id="+softid;
}
</script>
<body>
<section>
    <div class="banner">
        <img src="<!--{$out.static_url}-->/comment_reply/images/banner.jpg"/>
        <p class="gift"><img src="<!--{$out.static_url}-->/comment_reply/images/gift.png"/></p>
    </div>
    <div class="main">
        <div class="step">
            <div class="upgrade_tip">
			<!--{if $out.from eq 1}-->
			<img src="<!--{$out.static_url}-->/comment_reply/images/upgrade_end_tip.png"/>
			<!--{else}-->
			<img src="<!--{$out.static_url}-->/comment_reply/images/upgrade_tip.png"/>
			<!--{/if}-->
			</div>
            <div class="btns"><a href="javascript:;" onclick="download_apk()" class="btn_upgrade">马上升级</a></div>
        </div>
        <div class="copyright"><img src="<!--{$out.static_url}-->/comment_reply/images/copyright.png"/></div>
    </div>
</section>
</body>
</html>
