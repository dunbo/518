function checkinput(){
	var objs = document.getElementsByClassName('inputbox');
	var cnt = objs.length;
	for(var i=0;i<cnt;i++){
		if(isNaN(objs[i].value)){
			alert('排序值不能为非数字，提交失败');
			return false;
		}
	}
	return true;
}
