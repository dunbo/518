<include file="../../Public/header"  />
<link type="text/css" rel="stylesheet" href="/Public/css/tablelist.css" />
<script type="text/javascript" src='/Public/js/thickbox-compressed.js' ></script>
<link type="text/css" rel="stylesheet" href="/Public/css/thickbox.css" />
<script type="text/javascript" src="/Public/js/My97DatePicker/WdatePicker.js"></script>
<script type="text/javascript" src="/Public/js/zhiyoo/common.js"></script>
<style type="text/css">
#submid{height:31px;}

.table thead tr th{ text-align:center;}
.navgition { padding-bottom:20px; padding-right:30px; text-align:right;}
.navgition form {display:inline;}
.clear{ clear:both; float:none;}
</style>
<body style="overflow-x: hidden; overflow-y: auto; ">
<form method='post' action="__URL__/level">
<input type="hidden" name="action" value="area_edit" />
<div style="margin-top:10px;">
<h2>推荐帖子内容配置</h2>
	<div style="float:right;margin-bottom:5px;">
	<input class="search_btn" style="display:none;" type="submit" id="submid" value="保存优先级">
	<a class="search_btn" style="display:inline-block;" href="javascript:priority('P_id');" id="priorityid">编辑优先级</a>

	</div>
</div>
<div class="clear"></div>
<table border="0" cellpadding="0" cellspacing="0" class="table_list">
	<thead>
		<tr>
			<th width="70"><a href="__URL__/index?order={$order}">优先级↓↑</a></th>
			<th >文案</th>
			<th >版块配置</th>
			<th >分类</th>
			<th >筛选规则</th>
			<th >统计数量</th>
			<th >显示数量</th>
			<th >查看编辑</th>
			<th width="90">操作</th>
			<th width="70">状态</th>
		</tr>
	</thead>
	<volist name="result" id="val">
	<tr>
		<td id="P_id">
			<a>{$val.rank|default=''}</a>
			<input type="text" name="level[{$val.rid}]" onkeyup="this.value=replaceNum(this.value);" size="4" id="level" style="display:none;" value="{$val.rank|default=''}" /> 
		</td>
		<td>{$val.subject|default=''}</td>
		<td>{$val.fnames|default='全部'}
		<a id="furl" href="__URL__/forum_list/rid/{$val.rid}/" class="thickbox" style="text-decoration: underline;">选择版块</a>
		</td>
		
		<td>{$val.tnames|default='全部'}
		<a id="furl" href="__URL__/type_list/rid/{$val.rid}/" class="thickbox" style="text-decoration: underline;">选择分类</a>
		</td>
		<td>{$rule[$val['rule']]|default=''}</td>
		<td>{$val.count_num|default='0'}</td>
		<td>{$val.display_num|default='0'}</td>
		<td>
			<a href="__URL__/thread_list/rid/{$val.rid}/">查看编辑</a>
		</td>
		<td>
			<a href="__URL__/edit/rid/{$val.rid}/" class="thickbox">编辑</a>
		</td>
		<td><if condition="$val.status eq 1"> <a href="__URL__/chstatus/rid/{$val.rid}/status/0/" title="点击切换状态为停用" style="color:blue" onclick="return clickConfirm('确定要更改状态吗？');">使用</a>
		<elseif condition="$val.status eq 0"/><a href="__URL__/chstatus/rid/{$val.rid}/status/1/" style="color:red" title="点击切换状态为使用" onclick="return clickConfirm('确定要更改状态吗？');">停用</a>
		</if></td>
	</tr>
	</volist>
</table>
</form>
<div class="navgition">
	{$pageList|default='&nbsp;'}
</div>

</body>
</html>