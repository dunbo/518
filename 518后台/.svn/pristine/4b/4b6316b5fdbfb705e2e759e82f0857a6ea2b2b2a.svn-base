<div style="position:relative;margin:5px;"><h2>添加消息</h2></div>
<form method='post' action="__URL__/doadd/type/{$type}/" enctype="multipart/form-data">
<table border="0" cellpadding="0" cellspacing="0" class="table_list">
	<tr>
		<td>名称</td>
		<td><input type="text" name="name" id="title" value=""/>
        </td>
	</tr>
    <tr>
      <td colspan="2" align="center"><input type="submit" class="search_btn" style="display:inline-block;" name="submit" onclick="return check2()" id="submit" value="提交" /> <input type="button" class="search_btn" style="display:inline-block;" onclick="tb_remove();" value="取消" /></td>
    </tr>
</table>
</form>
<script type="text/javascript">
function check2(){
	var title = document.getElementById('title').value;
	if(title == ''){
		alert('请输入名称后在提交');
		return false;
	}
	return true;
}
</script>