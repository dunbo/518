<style type="text/css">
a{cursor:pointer;}
.groupclass{margin:10px;}
.groupclass a {font-size:14px;margin-left:10px;}
.groupclass a label{margin:10px 10px 10px 0px;}
</style>
<body>
<h2>编辑ROM管理列表选项名称</h2>
<form method='post' action="__URL__/edit_manage/"  onsubmit="return checkform(this);">
<input type="hidden" name="id" value="{$id}" />
<div>
	<p>展示名称：<input type="text" name="names" id="name_id" value="{$mname}" placeholder="请输入展示名称" /></p>
</div>

<div>
<input type="submit" class="search_btn" style="display:inline-block;" value="提交" /> 
<input type="button" class="search_btn" style="display:inline-block;" onclick="tb_remove();" value="取消" />
</div>
</form>
<script type="text/javascript">
function checkform(){
	if(!$.trim($('#name_id').val())){
		alert('展示名称不能为空');
		return false;
	}
	return true;
}
</script>
