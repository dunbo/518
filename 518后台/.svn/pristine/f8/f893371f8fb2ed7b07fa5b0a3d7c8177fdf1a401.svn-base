<script type="text/javascript">
function save(){
    tag_name = $("#tag_name1").val();
    tag_name2 = $("#tag_name2").val();



    tag_id = $("#tag_id").val();
    if(tag_name.length==0){
        alert('标签名称不能为空');
        return;
    }

    if(tag_name == tag_name2){
        tb_remove();
        return;
    }
    var param = {
        tag_name : tag_name,
        tag_name_old : tag_name2,
        tag_id : tag_id
    };
    $.ajax({
        url:'__URL__/add_tag',
        type:'POST',
        data:param,
        dataType:'json',
        success:function(data){
            if(data==1)
            {
                alert('该标签名已存在');
            }else if(data==2||data==4)
            {
                //location.href ="/index.php/Sj/Systemmanage/tags_list";
                location.reload();
            }else if(data==3||data==5){
                alert('添加失败');
            }
        }
    });
};
</script>
{$title}标签
<hr>
<br>
标签名称: <input type="text" id="tag_name1" value="{$tag_name}">
<input type="hidden" value="{.tag_id}" id="tag_id">
<input type="hidden" value="{$tag_name}" id="tag_name2">
<br> 
<br>
        <td height="20" colspan="2" align="center" bgcolor="#FFFFFF" ><input name="input" type="button" value="提交" onclick="save()"/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input name="" type="reset" value="取消" onclick="tb_remove();"/></td>
