<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link rel="stylesheet" type="text/css" href="/Public/css/style.css" />
<script type="text/javascript" src="/Public/js/Base.js"></script>
<script type="text/javascript" src="/Public/js/Form/CheckForm.js"></script>
<script type="text/javascript" src="/Public/js/common.js"></script>
<script type="text/javascript" src="/Public/js/Util/ImageLoader.js"></script>
<script type="text/javascript" src='/Public/js/jquery.js'></script>
<script type="text/javascript" src='/Public/js/default.js'></script>
<script type="text/javascript" src='/Public/js/rcalendar.js'></script>
<script type="text/javascript" src='/Public/js/Manager.js'></script>
</head>
<script type="text/javascript">
	function go_value(){
		var activate_value = document.getElementById('activate_times').value;
		if(activate_value !== 'no'){
			document.getElementById('pic_url').disabled = true;
			document.getElementById('pic_link').disabled =true;
			document.getElementById('pic_url').value="";
			document.getElementById('pic_link').value = "";
		}else{
			document.getElementById('pic_url').disabled = false;
			document.getElementById('pic_link').disabled =false;
		}
	}
	
	function getvalue(){
		var vname = document.getElementById("pic_name").value;
		var vtimes = document.getElementById("activate_times").value;
		var vurl = document.getElementById("pic_url").value;
		var vlink = document.getElementById("pic_link").value;
		if(vname == ""){
			alert("请填写宣传图名称");
			return false;
		}
		if(vtimes == 0){
			if(vurl == ""){
				alert("请注意红色提示,两者不能同时为空");
				return false;
			}
			if(vlink == ""){
				alert("请注意红色提示,两者不能同时为空");
				return false;
			}
		}
		
	}
</script>
<body>
	<form action="__URL__/add_top_pic_do" method="post" enctype="multipart/form-data">
	<table align="center">
		<tr>
			<td><span style="color:red;">*</span>名称:</td>
			<td><input type="text" name="pic_name" id="pic_name"/></td>
		</tr>
		<tr>
			<td>活动期:</td>
			<td>
				<select name="activate_times" id="activate_times" onchange="go_value()">
					<option value="no">无</option>
					<volist name="activate_category" id="vo">
					<option value="{$vo.id}">{$vo.id}</option>
					</volist>
				</select>
				<h3 style="color:red;">如果活动期选“无”，则下面必须上传图片和输入图片链接方可提交；如活动期选中其中一期，<br />则图片默认调用选中期的活动图和选中期的链接，图片上传和图片链接二项不可编辑状态。
				</h3>
			</td>
		</tr>
		<tr>
			<td><span style="color:red;">*</span>图片上传:</td>
			<td><input type="file" name="pic_url" id="pic_url" />图片大小:970*275像素</td>
		</tr>
		<tr>
			<td><span style="color:red;">*</span>图片链接:</td>
			<td><input type="text" name="pic_link" id="pic_link" /></td>
		</tr>
		<tr>
			<td>说明:</td>
			<td><input type="text" name="note" /></td>
		</tr>
		<tr>
			<td><input type="submit" value="提交" name="submit" onclick="return getvalue()" /></td>
			<td><a href="javascript:window.history.go(-1)">取消</a></td>
		</tr>
	</table>
	</form>
</body>
</html>