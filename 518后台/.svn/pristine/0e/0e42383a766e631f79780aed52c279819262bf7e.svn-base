<div>
	<h3>加入大家说</h3>
	<form action="__URL__/add_content" method="post" onsubmit="return check_value()" >
	<table>
	    <tr>
			<td style="text-align:right; width:70px;">选择标签：</td>
			<td align="left">
				<select name="label_name" id="label_name" style="margin:10px; width:300px; height:30px;">
				<?php foreach($label_list as $key => $val): ?>
					<option value='<?php echo $key?>'><?php echo $val?></option>
				<?php endforeach; ?>
				</select>
			</td>
		</tr>
		<tr>
			<td style="text-align:right; width:70px;">排序：</td>
			<td align="left">
				<input type="text" name="rank" id="rank" style="margin:10px; width:300px; height:30px;" />
			</td>
		</tr>
	</table>
    <div>
		<input type="hidden" name="comment_id" value="{$comment_id}"/>
		<input style="display:inline; margin:0 50px 10px 75px;" type="submit" class="search_btn" value="添加" />
		<input style="display:inline;"type="button" class="search_btn" value="取消" onclick="tb_remove();" />
	</div>	
	</form>
</div>
<script>
function check_value()
{  
	var label_name = $("#label_name").find("option:selected").text();
	var rank = $("#rank").val();
	if(!label_name)
	{
		alert("标签名称不能为空");
		return false;
	}
	if(rank)
	{
		var r=/^[0-9]*[1-9][0-9]*$/;
		if(r.test(rank) == false)			
		{			
			alert("排序必须为正整数");						
			return false;			
		}
	}
	else
	{
		alert("排序不能为空");
		return false;
	}
}
</script>
