<include file="../Public/header" />
<link rel="stylesheet" href="/Public/css/thickbox.css" type="text/css" media="screen"/>
<script type="text/javascript" src='/Public/js/jquery.js'></script>
<script type="text/javascript" src='/Public/js/thickbox-compressed.js'></script>
<script>
function submitChannel()
	{
		var cids = '';
		$('#channel_div').html('');
		$("#TB_ajaxContent #channel_selected input:checked").each(function(){
			var item = $('<label class="l_cid_'+ this.value+'">' + $('#channel_selected .l_cid_' + this.value).html() + '</label>');
			item.find('input').attr('checked', 'true');
			$('#channel_div').append(item);
		})
		$.cookie('cids', '', {path: '/'});
		tb_remove();
	}
	function onclikChannel()
	{	
		$('#channel_div').html($('#TB_ajaxContent #channel_selected').html());
	}
	function onclikChannel_c(cid)
	{	
		$('#channel_div .l_cid_' + cid).remove();
	}
	function check_arr()
	{
		$('#TB_ajaxContent #channel_selected').html($('#channel_div').html());

		$('#channel_div input:checked').each(function(){
			$('#TB_ajaxContent .l_cid_' + this.value).find('input').attr('checked', 'true');
		});
	}
</script>
<body>
<table border="0" cellpadding="0" cellspacing="0" class="tb">
<tr>
 <td><a href="__URL__/water_chl_list/wid/{$wid}">{$w_name}集合渠道列表</a></td>
</tr>
</table>
<center>
<form method="POST" action="__URL__/water_chl_add">
<table border=1>
	<tr><td>集合名称:</td><td>{$w_name}<input type="hidden" name="wid" value="{$wid}"/></td></tr>
	<tr><td>渠道名:</td><td><a class="thickbox" href="/index.php/Public/showChannel?callback=submitChannel&amp;ready=check_arr&amp;selected=onclikChannel">选择指定渠道</a><div id="channel_div"></div></td></tr>
	<tr><td>推广链接:</td><td><input type="text" name="popular_url" value=""></td></tr>
	<tr><td></td><td><input type="submit" name="submit" value="提交"/></td></tr>
</table>
</form>
</center>
</body>
</html>