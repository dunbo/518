
<style>
table{
    border: 0px;
}
td{
    border: 0px solid #000;
}
</style>
 
<body>

<form method='post' action="__URL__/doedit/action/add" >
<table width="80%" border="1" align="center">
	<tr>
      <td height="25" align="left"><h2>添加标签分类|</h2></td>
    </tr>
    <tr>
      <td height="25" align="center"><label>
        <input style="width:80%" type="text" name="name" id="groupname" value="" placeholder="请输入想要添加的名字"/>
      </label></td>
    </tr>
	<tr>
      <td align="center"><input type="submit" name="submit"  onclick="return check()" class="search_btn" style="display:inline-block;" value="提交" /> <input type="button" class="search_btn" style="display:inline-block;" onclick="tb_remove();" value="取消" /></td>
    </tr>
</table>
</form>
<script type="text/javascript">
function check(){
var check =  document.getElementById("groupname").value;
if($.trim(check) == '' || check.length == 0){
	alert('标签分类名称不能为空');
	return false;
}
}
</script>
