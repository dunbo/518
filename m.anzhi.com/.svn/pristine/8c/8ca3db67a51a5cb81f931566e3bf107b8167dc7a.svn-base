<link type="text/css" rel="stylesheet" href="<!--{$out.static_url}-->/timememory/css/common.css?v1"/>
<script type="text/javascript" src="<!--{$out.static_url}-->/timememory/js/jquery-1.10.2.min.js?v1"></script>

<script type="text/javascript">
	var sid = '<!--{$out.sid}-->';
	$(function(){
		$(".menu a").each(function(){
			$(this).bind("click",function(){
				var spanObj=$(this).find("span");
				if(spanObj.length==0){
					$(this).siblings().find("span").remove();
					var span_info = "<span id='span_" + $(this).attr('id') + "'>" + "</span>";
					$(this).append(span_info);
				}else{
					spanObj.remove();
				}
				var ok = check_ok();
				if (ok) {
					// 按钮为可提交状态
					$("#submit_a").attr('class', 'b');
				} else {
					// 不可提交状态
					$("#submit_a").attr('class', 'b_gray');
				}
			})
		})
	});
	
	function submit_memory() {
		var sexObj = $("[id^='span_sex_']");
		var teacherObj = $("[id^='span_teacher_']");
		var gradeObj = $("[id^='span_grade_']");
		var gossipObj = $("[id^='span_gossip_']");
		var fanObj = $("[id^='span_fan_']");
		var loveObj = $("[id^='span_love_']");
		
		
		if (sexObj.length == 0 || teacherObj.length == 0 || gradeObj.length == 0 || gossipObj.length == 0 || fanObj.length == 0 || loveObj.length == 0) {
			alert('please select all');
			return;
		}
		
		var sex = sexObj.attr('id');
		var teacher = teacherObj.attr('id');
		var grade = gradeObj.attr('id');
		var gossip = gossipObj.attr('id');
		var fan = fanObj.attr('id');
		var love = loveObj.attr('id');
		
		location.href = '/lottery/timememory_letter.php?sid=' + sid + '&sex=' + sex + '&teacher=' + teacher + '&grade=' + grade + '&gossip=' + gossip + '&fan=' + fan + '&love=' + love;
	}
	
	function check_ok() {
		var sexObj = $("[id^='span_sex_']");
		var teacherObj = $("[id^='span_teacher_']");
		var gradeObj = $("[id^='span_grade_']");
		var gossipObj = $("[id^='span_gossip_']");
		var fanObj = $("[id^='span_fan_']");
		var loveObj = $("[id^='span_love_']");
		
		if (sexObj.length == 0 || teacherObj.length == 0 || gradeObj.length == 0 || gossipObj.length == 0 || fanObj.length == 0 || loveObj.length == 0) {
			return false;
		}
		
		return true;
	}

</script>

</head>
