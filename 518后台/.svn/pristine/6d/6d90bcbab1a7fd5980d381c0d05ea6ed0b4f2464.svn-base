	 }
	});	         
}

//删除图片
function removeImg(obj){
	$(obj).parent().html('');
	var name = $(obj).attr('id');
	$("input[name="+name+"]").val('');
}

//图片上传判断
function onUploadImgChange(sender,img,obj,width){
    var newimg = new Image();
    newimg.src = check_img(sender);
    newimg.title = "点击删除";
    newimg.id = img;
    
    if( $("#"+img).val() && !sender.value.match( /.jpg|.gif|.png|.bmp|.jpeg/i ) )
	{        
        alert('图片格式无效！');   
        return false;       
    } 
    // 加载完成执行
    newimg.onload = function () {
		var w = newimg.width;
		var h = newimg.height;
	    var fileSize = $(sender)[0].files[0].size; //获得文件大小；
		//console.log(w +'/'+ h);
