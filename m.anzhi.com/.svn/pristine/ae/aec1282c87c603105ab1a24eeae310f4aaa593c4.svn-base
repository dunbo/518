<title>我的礼包码存号箱</title>
<link type="text/css" rel="stylesheet" href="/css/vacation_common.css?v1"/>
<script type="text/javascript"  src="/js/jquery-1.4.2.min.js?v1"></script>
<script type="text/javascript">
    $(document).ready(function(){
        $(".clickCopy").each(function(){
            var copyTxt=$(this).prev("span"),
                copyTip=$(this).next("em"),
                _this=$(this);
            _this.click(function(){
                    _this.hide();
                    copyTip.show();
                    setTimeout(function(){
                        copyTip.hide();
                        _this.show();
                    },2000)
            });
        });
    });
	
	function copygift(obj){
		var copyText = document.getElementById(obj).innerHTML;
		alert(copyText);
		window.clipboardData.setData("Text",copyText); 
	}
</script>
</head>
<body>
<section>
    <div class="white-wrap">
        <ul class="gift-code">
			<!--{if $out.my_gift}-->
			<!--{foreach from=$out.my_gift item=vo key=k}-->
            <li>
                <p class="hd"><!--{$vo.the_time}--> 获得<!--{$vo.soft_name}-->游戏礼包码</p>
                <p class="bd clear">
                    <span id="<!--{$k}-->"><!--{$vo.gift_num}--></span>
                </p>
            </li>
			<!--{/foreach}-->
			<!--{else}-->
			<span style="color:red;">您当前还没有领取礼包呦！</span>
			<!--{/if}-->
        </ul>
    </div>
</section>

</body>
</html>
