<script type="text/javascript">
	var text = [];
	text[0] = ['阳光骚年', '花季少女', '呆萌宅男', '豪放女汉', '不一样的美男子', 'YY腐女'];
	text[1] = ['小学老师', '初中老师', '高中老师', '大学老师', '苍老师'];
	text[2] = ['学霸', '学渣', '中等生'];
	text[3] = ['Ta和Ta在一起', '哪个老师颜值最高', '隔壁班的Ta'];
	text[4] = ['韩饭', '二次元饭', '欧美饭', '饭其他'];
	text[5] = ['告白在一起', '表白被拒', '暗恋中'];
	
	var answer0 = text[0][<!--{$out.answer_arr[0]}-->-1];
	var answer1 = text[1][<!--{$out.answer_arr[1]}-->-1];
	var answer2 = text[2][<!--{$out.answer_arr[2]}-->-1];
	var answer3 = text[3][<!--{$out.answer_arr[3]}-->-1];
	var answer4 = text[4][<!--{$out.answer_arr[4]}-->-1];
	var answer5 = text[5][<!--{$out.answer_arr[5]}-->-1];
	
	// 组合起来
	var letter = '我是个' + answer0 + '，学习的话一直是个' + answer2 + '，' + answer1 + '可是我最难忘记的人！没事就喜欢和同学八卦' + answer3 + '，吐槽食堂哪道菜更难吃！不过说到追星的话，虽然是' + answer4 + '但是我绝不脑残，现在和TA的状态是' + answer5 +'，总之酸甜苦辣全都有。这就是我的学生时期的日常！';
	
	window.onload = function() {
		document.getElementById('letter').innerText = letter;
	};
</script>

</head>
<body>
