<div style="margin-top:10px">
        增加抽奖机会<input type="text" name="lottery_num" id="lottery_num" style='margin-left:15px;width:100px;margin-right:10px;'/>次
</div>
<input type="hidden" id="user_id" name="user_id" value="{$user_id}">
<div style="float:left;margin-left: 30px;margin-top:10px">
    <input type="button" value="确定" class="search_btn" onclick="my_sub()">
</div>
<div style="float:left;margin-left: 40px;margin-top:10px">
    <input type="button" value="取消" class="search_btn" onclick="tb_remove();">
</div>
<div style="clear: both"></div>
<script type="text/javascript">
    function my_sub(){
        var id = $("#user_id").val();
        var lottery_num = $("#lottery_num").val();
        if(isNaN(lottery_num)||lottery_num<=0||lottery_num>5||parseInt(lottery_num)!=lottery_num){
            alert('请输入1-5的整数');
            return false;
        }
        $.ajax({
            type: "POST",
            url: "__URL__/add_lottery_num",
            data: "id="+id+"&lottery_num="+lottery_num,
            dataType: "json",
            success: function(data){
                alert(data.msg);
                if(data.code==1){
                    tb_remove();
                    window.location.reload();
                    // window.location.href="__URL__/video_config?p={$p}&lr={$lr}"
                }
            }
        });
    }
</script>