    <script type="text/javascript">
        function save(){
            if($("#package").val().length==0)
            {
                alert('包名不能为空');
                return;
            }

            var param = {
                bid : $("#bid").val(),
                package: $("#package").val(),
                old_pkg: $("#old_pkg").val(),
                softname: $("#softname").val(),
                desc : $("#desc").val()
            };

            $.ajax({
                url:'__URL__/save_black_dialog',
                type:'POST',
                data:param,
                secureuri:false,
                dataType:'json',
                success:function(data){
                   if(data==1)
                   {
                        location.reload();
                   }else if(data==2)
                   {
                        alert('包名已存在');
                   }
                }
            });
        };
    </script>
</head>
<body>
<div style="width:45; margin-top:4px">
  <table>
    <tr align="center">
         <td width="20%" height="20" align="right" bgcolor="#FFFFFF">软件包名:</td>
         <td align="left" bgcolor="#FFFFFF">
             <input type="hidden" id="bid" value="{$info.id}">
             <input type="hidden" id="old_pkg" value="{$info.package}">
             <input type="text" size="20"  id="package" value="{$info.package}">
        </td>
    </tr>      
      <tr align="center">
         <td width="20%" height="20" align="right" bgcolor="#FFFFFF">软件名称:</td>
         <td align="left" bgcolor="#FFFFFF">
             <input type="text" size="20"  id="softname" value="{$info.softname}">
        </td>
    </tr>      
        <tr align="center">
         <td width="20%" height="20" align="right" bgcolor="#FFFFFF">备注:</td>
         <td align="left" bgcolor="#FFFFFF">
             <input type="text" size="20"  id="desc" value="{$info.desc}">
        </td>
    </tr>      
    <br>
   <tr>
        <td height="20" colspan="2" align="center" bgcolor="#FFFFFF" ><input name="input" type="button" value="提交" onclick="save()"/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input name="" type="reset" value="取消" onclick="tb_remove();"/></td>
      </tr>
</table>
</div>
</body>
</html>

