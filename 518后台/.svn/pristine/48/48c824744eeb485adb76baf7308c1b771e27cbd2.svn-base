<include file="../Public/header"/>
<script>
function checkinput(){
	var softid = $("#softid").val();
	var softname = $("#softname").val();
	var pkg = $("#pkg").val();
	if(!softid && !softname && !pkg){
		alert("搜索条件不能为空！");
		return false;
	}
	return true;
}
</script>
<body>
	<center>
		<form action="__URL__/modifypkgsaft_list" method="GET">
			<table>
				<tr>
					<td>软件id:<input type="text" name="softid" id="softid" value="{$softid}"/></td>
					<td>软件名:<input type="text" name="softname" id="softname" value="{$softname}"/></td>
					<td>包  名:<input type="text" name="package" id="pkg" value="{$package}"/></td>
					<td><input type="submit" value="搜索" onclick="return checkinput()"/></td>
				</tr>
			</table>
		</form>
	</center>
	<center>
		<table>
		<tr>
			<th>softid</th>
			<th>软件名</th>
			<th>包名</th>
			<th>厂商交互时间</th>
			<th>不安全信息</th>
			<th>操作</th>
		</tr>
		<?php foreach($softlist as $info){ ?>
			<tr>
				<td><?php echo $info['softid'];?></td>
				<td><?php echo $info['softname'];?></td>
				<td><?php echo $info['package'];?></td>
				<td><div style="width:250px; height:80px; overflow-x:scroll; overflow-y:auto"><?php echo $info['time'];?></div></td>
				<td><div style="width:250px; height:80px; overflow-x:scroll; overflow-y:auto"><?php echo $info['safe_desc'];?></div></td>
				<td><a href="__URL__/modifypkgsafe/id/<?php echo $info['softid']?>/type/1"  onclick="return checkit();">下架</a>|<a href="__URL__/modifypkgsafe/id/<?php echo $info['softid']?>/type/2" onclick="return checkit();">安全</a></td>
			</tr>
		<?php } ?>
		</table>
		{$page}
	</center>
</body>