<script>
	$(document).ready(function(){
		var my_contents1 = $('#soft_name').val();
		var my_contents2 = $('#recomment').val();
		var my_contents3 = $('#award_recomment').html();
		 $('#my_content1').html(my_contents1.length);
		 $('#my_content2').html(my_contents2.length);
		 $('#my_content3').html(my_contents3.length);
	});
	
	function gbcount1(message,total){
	  var my_ap_name = document.getElementById("soft_name").value.substr(0,total);
	  if (message.length > total) {
			$('#soft_name').val(my_ap_name);
			$('#my_content1').html(total);
	  }else{
		$('#my_content1').html(message.length);
	  }
	}
	
	function gbcount2(message,total){
	  var my_ap_name = document.getElementById("recomment").value.substr(0,total);
	  if (message.length > total) {
			$('#recomment').val(my_ap_name);
			$('#my_content2').html(total);
	  }else{
		$('#my_content2').html(message.length);
	  }
	}
	
	function gbcount3(message,total){
	  var my_ap_name = document.getElementById("award_recomment").value.substr(0,total);
	  if (message.length > total) {
			$('#award_recomment').val(my_ap_name);
			$('#my_content3').html(total);
	  }else{
		$('#my_content3').html(message.length);
	  }
	}
</script>
<div style="margin:20px;">
<form action="__URL__/edit_soft_do" method="post">
	<table border="1" cellpadding="0" cellspacing="0">
		<tr>
			<td colspan="2">编辑软件<input type="hidden" name="id" value="{$result[0]['id']}" /><input type="hidden" name="p" value="{$p}" /><input type="hidden" name="lr" value="{$lr}" /></td>
		</tr>
		<tr>
			<td>软件名称</td>
			<td><input type="text" name="soft_name" value="{$result[0]['soft_name']}" id="soft_name" wrap=PHYSICAL onKeyDown="gbcount1(this.value,10);" onKeyUp="gbcount1(this.value,10);" />&nbsp;<span id="my_content1"></span>/10</td>
		</tr>
		<tr>
			<td>软件包名</td>
			<td><input type="text" name="package" value="{$result[0]['package']}" /></td>
		</tr>
		<tr>
			<td>软件排序</td>
			<td>
			<select name="rank">
			<?php foreach($rank as $key => $val){ ?>
			<option value="{$val}" <?php if($result[0]['rank'] == $val){ ?>selected<?php } ?>>{$val}</option>
			<?php } ?>
			</select>
			</td>
		</tr>
		<tr>
			<td>一句话推荐</td>
			<td><input type="text" name="recomment" value="{$result[0]['recomment']}" wrap=PHYSICAL id="recomment" onKeyDown="gbcount2(this.value,15);" onKeyUp="gbcount2(this.value,15);" />&nbsp;<span id="my_content2"></span>/15</td>
		</tr>
		<tr>
			<td>奖品介绍</td>
			<td><textarea rows="10" cols="50" name="award_recomment" id="award_recomment" wrap=PHYSICAL onKeyDown="gbcount3(this.value,100);" onKeyUp="gbcount3(this.value,100);" >{$result[0]['award_recomment']}</textarea>&nbsp;<span id="my_content3"></span>/100</td>
		</tr>
	</table>
	<table>
		<tr>
			<td><input type="submit" value="确定" class="search_btn" /></td>
			<td><input type="button" value="取消" class="search_btn" onclick="tb_remove();" /></td>
		</tr>
	</table>
</form>
</div>