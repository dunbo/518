/* CSS Document */

.app_header{padding:10px 10px; color:#555555;}
.app_info_page{width:100%;}
.app_btn{float:right; display:block; width:75px; height:26px; margin-top:5px; background:#71b32b; border-radius:3px; color:#ffffff; text-align:center; line-height:26px;}
.app_txt{float:left;}
.app_txt h3{float:left; padding:7px 0; font-size:18px; font-weight:normal}
.app_header ul{margin-top:5px;}
.app_header ul li{float:left; width:50%; line-height:22px;}

.app_cnt{border-top:3px solid #8cb340; color:#555555}
.appcnt_bg{height:30px; background:#f4f7f6; color:#669900; line-height:30px; padding:0 10px;}
.appcntlist{ padding:8px 10px; font-size:16px;}

#mylove{width:100%;}
#mylove li{float: left; width: 49%;}
#mylove li a {display: block; width:98%; height:100%; padding: 11px 0 10px 2%; border-bottom: 1px solid #c4df9b; font-size:18px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;}

.comment li{padding:8px 10px 10px; border-bottom:1px solid #c4df9b;}
.comment_top{height:26px; line-height:26px; white-space:nowrap;}
.comment_top span{float:left; font-size:14px; color:#898989}
.comment_top img{float:right; margin-top:4px;}
.comment li p{font-size:18px; padding-top:4px;}

.toggle_btn{height:24px; padding-right:18px; padding:5px; position:relative;}
.toggle_btn span{display:block;  height:24px; padding-right:18px; background: url(../images/arrow_01.png) no-repeat right 2px; position:absolute; right:10px; top:6px; color:#336600; font-size:15px;}
.toggle_btn span.up{background: url(../images/arrow_03.png) no-repeat right 2px;}

.comment_bg{width:90px; height:7px; background:#669900;}
/*suggest*/
#suggest{padding:0 10px 30px;}
#suggest p{ padding-top:8px; font-size:16px; color:#555555; line-height:30px;}
.jinggao{ display:inline-block; width:24px; height:20px; background:url(../images/jinggao.png) no-repeat;}
#telphone,#suggest select{width:60%; padding:6px 0; border:1px solid #959595; border-radius:5px;  padding-left:10px;}
#suggest select{height:30px; line-height:30px; padding:6px 0;}
#suggest textarea{width:80%; height:80px; border:1px solid #959595; border-radius:5px;}
.suggest_sub input{width:80px; height:35px; margin-top:20px; border:none; border-bottom:1px solid #4a6940; border-radius:5px; background:#71b32b; line-height:35px; text-align:center; color:#fff; font-size:18px; font-family:"微软雅黑"}
}