<script type="text/javascript">  
var aid = "<!--{$out.aid}-->";
var sid = "<!--{$out.sid}-->";
//领取
function receive_post(){
	var str = $('#mobile_num').val();
	if(!checkMobile(str)) return false;
	//$('#sub').attr('onclick',"");
	$.ajax({
		url: '/lottery/hebei_telecom/index.php?sid='+sid+'&aid='+aid,
		type: 'post',
		data : 'send=1&mobile_num='+str,
		dataType: 'json',
		success: function(ret) {
			$('#mobile_err').html('');		
			if(ret.code == 10229 ){	
				//$('#sub').attr('onclick',"receive_post()");	
				$('#phone_div').css('display','none');
				$('#phone_success').css('display','block');			
				$('.loading').show();
				$('.flow_about').hide();			
			}else if(ret.code == 00000 ){
				var mobile_num = $('#mobile_num').val();
				$('#phone_div').css('display','none');
				$('#phone_success').css('display','block');			
				$('.loading').show();
				$('.flow_about').hide();	
				setTimeout(function() {  
					$('.loading').hide();
					$('#phone_div').css('display','none');
					$('#phone_success').css('display','block');
					$('#phone').html(mobile_num);
					$('.flow_about').show();
				}, 2000) 				
			}else{
				var obj = {10001:'空号/号码不存在',10010:'欠费/停机',10012:'号码已冻结或注销',10013:'黑名单客户',10018:'不能重复订购',10024:'业务互斥',10033:'在途工单',10057:'号码归属地信息不正确',10058:'客户业务受限',10063:'用户状态异常',10074:'用户信息不存在',10225:'无主套餐',10234:'您的手机号不在活动范围内',80004:'解析接收报文异常',90001:'系统异常',10003:'非法参数',10006:'非法客户',10007:'非法销售品',10008:'非法请求流水号',10030:'非法合同编号',10031:'销售品未配置',10040:'服务无权访问',10054:'销售品配置异常',10081:'销售品不存在',10091:'回调地址未配置',10109:'活动省份不存在',10230:'重复请求流水号',10236:'无订购记录，重发失败',10237:'您已领取过流量包啦~',80002:'网络异常',99999:'系统未知错误'};
				if(obj[ret.code]){
					var str = obj[ret.code];
				}else{
					var str = obj[10234];
				}
				$('#mobile_err').html(str);
				return false;
			}
		}
	});	
}
//验证手机号码   验证规则：11位数字，以13|14开头。	
function  checkMobile(str) {
	if(!str){
		$('#mobile_err').html('请输入手机号');
		return false;	
	}
	var  re = /^(13|14|15|17|18)\d{9}$/
    if (!re.test(str)){
		$('#mobile_err').html('请输入正确的手机号');
		return false;
    }
	return true;
}

</script>