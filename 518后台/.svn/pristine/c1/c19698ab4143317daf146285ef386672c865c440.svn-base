<script>
function check(){
	var soft_category = $('#category_id').val();
	if(!soft_category){
		$('#check_prompt').html("请选择类别");
		return false;
	}
}
</script>
<body>
<div>
<form action="__URL__/soft_terrace_do" method="get">
<table>
<input type="hidden" name="softid" value="{$softid}">
<tr>
<?php foreach($terrace as $key => $val){ ?>
	<td>
	<input type="checkbox" name="soft_ter" id="soft_ter" value="{$val}" <?php if(in_array($val,$ter)){ ?>checked<?php } ?> >&nbsp;&nbsp;{$key}&nbsp;&nbsp;
	<select name="category_id" id="category_id">
		<option value="">请选择分类</option>
		<?php foreach($category_result as $key => $val){ ?>
		<option value="{$val['id']}" <?php if($soft_category == $val['id']){ ?>selected<?php } ?> >{$val['name']}</option>
		<?php } ?>
	</select>&nbsp;&nbsp;
	<span style="color:red;" id="check_prompt"></span>
	</td>
<?php } ?>
</tr>
<tr>
<td><input type="submit" value="确定" onclick="return check();"></td>
<td><input type="button" value="取消" onclick="tb_remove();"></td>
</tr>
</table>
</form>
</div>
</body>
</html>