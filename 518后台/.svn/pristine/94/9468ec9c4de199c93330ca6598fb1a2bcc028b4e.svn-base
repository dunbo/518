<script>
 $('.condition').change(function(){
	var type = $(this).val();
	if( type == 1 ) {
		$('.package_block').hide();
		$('.red_block').show();
		$('.date_block').hide();
	}else if( type == 2 ) {
		$('.package_block').show();
		$('.red_block').hide();
		$('.date_block').show();
	}
});
 
$('#pkg').change(function(){
	 var pkg = $(this).val();
	 var aid = {$aid};
	 var url = "__URL__/pub_red_soft_list";
	$.ajax({
	    type: "POST",
	    url: url,
	    data:{aid:aid,pkg:pkg},
	    success: function(data) {
	        var data = eval("("+data+")");
	        if(data['code']==1) {
	        	var str = "<select name='task_id'>";
	        	$.each(data['data'],function(k,v){
	        		str += "<option value='"+v.task_id+"'>"+v.start_tm+' 至 '+v.end_tm+"</option>";
	        	});
	        	str += "</select>";
	        	$('.date_select_div').empty().append(str);
	        }else {
	        	alert('该包名下没有红包任务');
	        	$('.date_select_div').empty().append('<select name="task_id"><option value="0">无数据</option></select>');
	        }
	    }
	});
});

</script>
