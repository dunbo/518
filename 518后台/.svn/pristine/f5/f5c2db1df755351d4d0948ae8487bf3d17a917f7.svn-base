<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>校园管理列表</title>
<style type="text/css">
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,select,option,textarea,p,blockquote,th,td,table,tr,td,iframe{padding: 0; margin: 0;}
</style>
<link rel="stylesheet" href="__PUBLIC__/school/ss/common.css" type="text/css" />
<script type="text/javascript" src="__PUBLIC__/school/js/jquery-1.6.2.min.js"></script>
<script type="text/javascript" src="__PUBLIC__/school/js/jquery.zxxbox.3.0.js"></script>
<script LANGUAGE="javascript"> 
<!-- 
$(function(){
$("#add").click(function(){
		$("#login").zxxbox();	//或者是$.zxxbox($("#login"));		
		$("#cancelBtn").click(function(){
			$.zxxbox.hide();						   
		});
	});
}); 
function openwin(str)
{
	$.zxxbox('<div id="login" style="padding:40px;"><form action="" method="post" enctype="multipart/form-data"><p>学校名称：<input id="unseName" name="name" type="text" size="20" /></p><input id="addname" name="updata" type="text" value="'+str+'" size="20" style="display:none;"/><p><input id="loginBtn" type="submit" value="修改"/></p></form></div>', { bg: false });
}
function openwindelete(str)
{
	$.zxxbox('<div id="login" style="padding:40px;"><form action="" method="post" enctype="multipart/form-data"><input id="addname" name="del" type="text" value="'+str+'" size="20" style="display:none;"/><p><input id="loginBtn" type="submit" value="删除"/></p></form></div>', { bg: false });
}
--> 
</script> 

</head>

<body>

  <div align="right" style="margin-right:100px">
  <p><button id="add">添加</button></p>
  </div>
<div id="login" style="padding:40px; display:none;">
    <form action="" method="post" enctype="multipart/form-data">
    <p>学校名称：<input id="unseName" name="name" type="text" size="20" /></p>
    <input id="addname" name="add" type="text" value="add" size="20" style="display:none;"/>
    <p><input id="loginBtn" type="submit" value="添加"/><button id="cancelBtn">取消</button></p>
  </form>
</div>

<table width="100%" border="1">
  <tr>
    <th scope="col">序号</th>
    <th scope="col">学校名称</th>
    <th scope="col">操作</th>
  </tr>
  <volist name='new' id='usersvo'>
  <tr>
    <td>{$usersvo.id|default='&nbsp;'}</td>
    <td>{$usersvo.schoolname|default='&nbsp;'}</td>
    <td>
    	<div align="center">
    		<button id="updata1" onclick="openwin('{$usersvo.id}');">编译</button>
    		<button id="delete" onclick="openwindelete('{$usersvo.id}');">删除</button>
    	</div>
    </td>
  </tr>
  </volist>
</table>
<form action=""  method="get">
{$page}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
页面显示条数：
<input type="text" name="getpage" value="{$getpage}" />
<input type="submit" name="getp" value="提交" />
</form>
</body>
</html>
