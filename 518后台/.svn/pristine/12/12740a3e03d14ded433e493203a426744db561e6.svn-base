<style>
table{
    border: 0px;
}
td{
    border: 0px solid #000;
}
</style>
<body>
插入帖子
<form method='post' action="__URL__/add_thread_do/rid/{$rid}/"  enctype="multipart/form-data">

<table width="80%" border="1" align="center">
    <tr>
      <td width="30%" height="25" align="right">优先级</td>
      <td height="25" align="left">
        <input type="text" onkeyup="this.value=replaceNum(this.value);" name="rank" id="rank" value="" />
      </td>
    </tr>
    <tr>
      <td width="30%" height="25" align="right">TID</td>
      <td height="25" align="left">
        <input type="text" onkeyup="this.value=replaceNum(this.value);" name="tid" id="tid" value="" />
      </td>
    </tr>
	<tr>
      <td colspan="2" align="center"><input type="submit" class="search_btn" style="display:inline-block;" name="submit" onclick="return check()" id="submit" value="提交" /> <input type="button" class="search_btn" style="display:inline-block;" onclick="tb_remove();" value="取消" /></td>
    </tr>
</table>
</form>
<script type="text/javascript">
function check(){
	var tid =  document.getElementById("tid").value;
	if($.trim(tid) <= 0){
		alert('tid不正确');
		return false;
	}
	
	return true;
}
</script>
